@model StudioCG.Web.Models.User
@{
    ViewData["Title"] = "Dettagli Utente";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>Dettagli Utente</h5>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit me-1"></i>Modifica
                    </a>
                    @if (Model.Username != "admin")
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash me-1"></i>Elimina
                        </a>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="user-avatar-lg mx-auto mb-3">
                        @Model.Nome.Substring(0, 1).ToUpper()@Model.Cognome.Substring(0, 1).ToUpper()
                    </div>
                    <h4>@Model.NomeCompleto</h4>
                    <p class="text-muted">@@@Model.Username</p>
                </div>
                
                <table class="table">
                    <tr>
                        <th style="width: 40%;"><i class="fas fa-envelope me-2 text-muted"></i>Email</th>
                        <td>@(Model.Email ?? "-")</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-toggle-on me-2 text-muted"></i>Stato</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-active">Attivo</span>
                            }
                            else
                            {
                                <span class="badge badge-inactive">Inattivo</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-user-shield me-2 text-muted"></i>Ruolo</th>
                        <td>
                            @if (Model.IsAdmin)
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="fas fa-crown me-1"></i>Amministratore
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Utente</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-calendar-plus me-2 text-muted"></i>Data Creazione</th>
                        <td>@Model.DataCreazione.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-clock me-2 text-muted"></i>Ultimo Accesso</th>
                        <td>
                            @if (Model.UltimoAccesso.HasValue)
                            {
                                @Model.UltimoAccesso.Value.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">Mai effettuato</span>
                            }
                        </td>
                    </tr>
                </table>
                
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Torna all'elenco
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-avatar-lg {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #1a365d 0%, #2d5a87 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.8rem;
    }
</style>


