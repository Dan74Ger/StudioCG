@model List<StudioCG.Web.Models.Documenti.DocumentoGenerato>
@{
    ViewData["Title"] = "Archivio Documenti";
    var clienti = ViewBag.Clienti as IEnumerable<dynamic>;
    var templates = ViewBag.Templates as IEnumerable<dynamic>;
    var filtroCliente = ViewBag.FiltroCliente as int?;
    var filtroTemplate = ViewBag.FiltroTemplate as int?;
    var filtroDataDa = ViewBag.FiltroDataDa as DateTime?;
    var filtroDataA = ViewBag.FiltroDataA as DateTime?;
    var search = ViewBag.Search as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-archive me-2"></i>Archivio Documenti</h2>
            <small class="text-muted">
                <i class="fas fa-file me-1"></i>@Model.Count documenti in archivio
            </small>
        </div>
        <div>
            <a href="@Url.Action("ControlloAntiriciclaggio")" class="btn btn-warning">
                <i class="fas fa-shield-alt me-1"></i>Controllo Antiriciclaggio
            </a>
            <a href="@Url.Action("Genera")" class="btn btn-primary ms-2">
                <i class="fas fa-plus me-1"></i>Genera Nuovo
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtri -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label"><i class="fas fa-user me-1"></i>Cliente</label>
                    <select name="clienteId" class="form-select">
                        <option value="">-- Tutti i clienti --</option>
                        @if (clienti != null)
                        {
                            @foreach (var c in clienti)
                            {
                                <option value="@c.Id" selected="@(filtroCliente == c.Id)">@c.RagioneSociale</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label"><i class="fas fa-file-alt me-1"></i>Template</label>
                    <select name="templateId" class="form-select">
                        <option value="">-- Tutti i template --</option>
                        @if (templates != null)
                        {
                            @foreach (var t in templates)
                            {
                                <option value="@t.Id" selected="@(filtroTemplate == t.Id)">@t.Nome</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label"><i class="fas fa-calendar me-1"></i>Data da</label>
                    <input type="date" name="dataDa" class="form-control" value="@(filtroDataDa?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label"><i class="fas fa-calendar me-1"></i>Data a</label>
                    <input type="date" name="dataA" class="form-control" value="@(filtroDataA?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-fill">
                            <i class="fas fa-filter me-1"></i>Filtra
                        </button>
                        <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary" title="Rimuovi filtri">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista Documenti -->
    <div class="card">
        @if (Model.Any())
        {
            <!-- Barra azioni -->
            <div class="card-header bg-light d-flex justify-content-between align-items-center py-2">
                <div class="d-flex align-items-center gap-3">
                    <div class="form-check">
                        <input type="checkbox" id="selectAll" class="form-check-input" style="width: 20px; height: 20px;">
                        <label class="form-check-label ms-1" for="selectAll" style="cursor: pointer;">Seleziona tutti</label>
                    </div>
                    <span id="selectedCount" class="text-muted small"></span>
                </div>
                <div id="bulkActions" style="display: none;">
                    <button type="button" id="btnDownloadZip" class="btn btn-success btn-sm me-2">
                        <i class="fas fa-download me-1"></i>Scarica ZIP (<span id="downloadCount">0</span>)
                    </button>
                    <button type="button" id="btnDeleteSelected" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash me-1"></i>Elimina (<span id="deleteCount">0</span>)
                    </button>
                </div>
            </div>
        }
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <form id="formBulkAction" method="post">
                    @Html.AntiForgeryToken()
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 40px;"></th>
                                    <th style="width: 120px;">
                                        <i class="fas fa-calendar me-1"></i>Data
                                    </th>
                                    <th>
                                        <i class="fas fa-user me-1"></i>Cliente
                                    </th>
                                    <th>
                                        <i class="fas fa-file-alt me-1"></i>Template
                                    </th>
                                    <th>
                                        <i class="fas fa-file me-1"></i>Nome File
                                    </th>
                                    <th style="width: 80px;" class="text-center">Tipo</th>
                                    <th style="width: 120px;" class="text-center">Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doc in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            <input type="checkbox" class="form-check-input doc-checkbox" 
                                                   name="documentoIds" value="@doc.Id" 
                                                   style="width: 18px; height: 18px;">
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-nowrap">@doc.GeneratoIl.ToString("dd/MM/yyyy")</span>
                                            <br><small class="text-muted">@doc.GeneratoIl.ToString("HH:mm")</small>
                                        </td>
                                        <td class="align-middle">
                                            <strong>@doc.Cliente?.RagioneSociale</strong>
                                        </td>
                                        <td class="align-middle">
                                            @doc.TemplateDocumento?.Nome
                                        </td>
                                        <td class="align-middle">
                                            <span class="text-truncate d-inline-block" style="max-width: 300px;" title="@doc.NomeFile">
                                                @doc.NomeFile
                                            </span>
                                        </td>
                                        <td class="align-middle text-center">
                                            @if (doc.TipoOutput == StudioCG.Web.Models.Documenti.TipoOutputDocumento.PDF)
                                            {
                                                <span class="badge bg-danger"><i class="fas fa-file-pdf me-1"></i>PDF</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary"><i class="fas fa-file-word me-1"></i>Word</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("DownloadDocumento", new { id = doc.Id })" 
                                                   class="btn btn-outline-success" title="Scarica">
                                                    <i class="fas fa-download"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger btn-delete-single" 
                                                        data-id="@doc.Id" data-nome="@doc.NomeFile" title="Elimina">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                    @if (filtroCliente.HasValue || filtroTemplate.HasValue || filtroDataDa.HasValue || filtroDataA.HasValue)
                    {
                        <p>Nessun documento trovato con i filtri selezionati.</p>
                        <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Rimuovi filtri
                        </a>
                    }
                    else
                    {
                        <p>Nessun documento in archivio.</p>
                        <a href="@Url.Action("Genera")" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Genera il primo documento
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Form nascosto per eliminazione singola -->
<form id="formDeleteSingle" asp-action="DeleteDocumento" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteDocId" />
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const selectAllCheckbox = document.getElementById('selectAll');
    const docCheckboxes = document.querySelectorAll('.doc-checkbox');
    const bulkActions = document.getElementById('bulkActions');
    const btnDownloadZip = document.getElementById('btnDownloadZip');
    const btnDeleteSelected = document.getElementById('btnDeleteSelected');
    const downloadCountSpan = document.getElementById('downloadCount');
    const deleteCountSpan = document.getElementById('deleteCount');
    const selectedCountSpan = document.getElementById('selectedCount');
    const formBulkAction = document.getElementById('formBulkAction');
    
    // Seleziona tutti
    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            docCheckboxes.forEach(cb => cb.checked = this.checked);
            updateSelectionUI();
        });
    }
    
    // Singole checkbox
    docCheckboxes.forEach(cb => {
        cb.addEventListener('change', updateSelectionUI);
    });
    
    function updateSelectionUI() {
        const checkedCount = document.querySelectorAll('.doc-checkbox:checked').length;
        const totalCount = docCheckboxes.length;
        
        if (checkedCount > 0) {
            bulkActions.style.display = 'block';
            downloadCountSpan.textContent = checkedCount;
            deleteCountSpan.textContent = checkedCount;
            selectedCountSpan.textContent = `${checkedCount} di ${totalCount} selezionati`;
        } else {
            bulkActions.style.display = 'none';
            selectedCountSpan.textContent = '';
        }
        
        // Aggiorna stato "Seleziona tutti"
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = checkedCount === totalCount && totalCount > 0;
            selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < totalCount;
        }
    }
    
    // Scarica ZIP
    if (btnDownloadZip) {
        btnDownloadZip.addEventListener('click', function() {
            const selectedIds = Array.from(document.querySelectorAll('.doc-checkbox:checked')).map(cb => cb.value);
            if (selectedIds.length === 0) return;
            
            // Redirect to download endpoint
            const params = selectedIds.map(id => 'ids=' + id).join('&');
            window.location.href = '@Url.Action("DownloadZipDocumenti")?' + params;
        });
    }
    
    // Elimina selezionati
    if (btnDeleteSelected) {
        btnDeleteSelected.addEventListener('click', function() {
            const checkedCount = document.querySelectorAll('.doc-checkbox:checked').length;
            if (checkedCount === 0) return;
            
            if (confirm(`Eliminare ${checkedCount} documento/i?\n\nQuesta azione non puÃ² essere annullata.`)) {
                formBulkAction.action = '@Url.Action("DeleteDocumentiMultipli")';
                formBulkAction.submit();
            }
        });
    }
    
    // Elimina singolo
    document.querySelectorAll('.btn-delete-single').forEach(btn => {
        btn.addEventListener('click', function() {
            const id = this.getAttribute('data-id');
            const nome = this.getAttribute('data-nome');
            
            if (confirm(`Eliminare il documento "${nome}"?`)) {
                document.getElementById('deleteDocId').value = id;
                document.getElementById('formDeleteSingle').submit();
            }
        });
    });
});
</script>
