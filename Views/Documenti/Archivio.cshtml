@model List<StudioCG.Web.Models.Documenti.DocumentoGenerato>
@{
    ViewData["Title"] = "Archivio Documenti";
    var filtroCliente = ViewBag.FiltroCliente as int?;
    var filtroTemplate = ViewBag.FiltroTemplate as int?;
    var filtroDataDa = ViewBag.FiltroDataDa as DateTime?;
    var filtroDataA = ViewBag.FiltroDataA as DateTime?;
    var clienti = ViewBag.Clienti as IEnumerable<dynamic>;
    var templates = ViewBag.Templates as IEnumerable<dynamic>;
    
    // Raggruppa per cliente ordinando alfabeticamente
    var cartelleClienti = Model
        .GroupBy(d => new { d.ClienteId, Nome = d.Cliente?.RagioneSociale ?? "Sconosciuto" })
        .OrderBy(g => g.Key.Nome)
        .ToList();
    
    var totaleDocumenti = Model.Count;
    var totaleCartelle = cartelleClienti.Count;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-archive me-2"></i>Archivio Documenti</h2>
            <small class="text-muted">
                <i class="fas fa-folder me-1"></i>@totaleCartelle cartelle clienti &nbsp;|&nbsp;
                <i class="fas fa-file me-1"></i>@totaleDocumenti documenti totali
            </small>
        </div>
        <div>
            <a href="@Url.Action("ControlloAntiriciclaggio")" class="btn btn-warning">
                <i class="fas fa-shield-alt me-1"></i>Controllo Antiriciclaggio
            </a>
            <a href="@Url.Action("Genera")" class="btn btn-primary ms-2">
                <i class="fas fa-plus me-1"></i>Genera Nuovo
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtri -->
    <div class="card mb-4">
        <div class="card-body py-2">
            <form method="get" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small mb-1"><i class="fas fa-user me-1"></i>Cliente</label>
                    <select name="clienteId" class="form-select form-select-sm">
                        <option value="">-- Tutti --</option>
                        @if (clienti != null)
                        {
                            @foreach (var c in clienti)
                            {
                                <option value="@c.Id" selected="@(filtroCliente == c.Id)">@c.RagioneSociale</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small mb-1"><i class="fas fa-file-alt me-1"></i>Template</label>
                    <select name="templateId" class="form-select form-select-sm">
                        <option value="">-- Tutti --</option>
                        @if (templates != null)
                        {
                            @foreach (var t in templates)
                            {
                                <option value="@t.Id" selected="@(filtroTemplate == t.Id)">@t.Nome</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label small mb-1"><i class="fas fa-calendar me-1"></i>Da</label>
                    <input type="date" name="dataDa" class="form-control form-control-sm" value="@(filtroDataDa?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label small mb-1"><i class="fas fa-calendar me-1"></i>A</label>
                    <input type="date" name="dataA" class="form-control form-control-sm" value="@(filtroDataA?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <div class="d-flex gap-1">
                        <button type="submit" class="btn btn-primary btn-sm flex-fill">
                            <i class="fas fa-filter me-1"></i>Filtra
                        </button>
                        <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary btn-sm" title="Reset">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Cartelle Clienti -->
    @if (cartelleClienti.Any())
    {
        <div class="card">
            <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                <div>
                    <button type="button" id="btnExpandAll" class="btn btn-outline-secondary btn-sm me-2">
                        <i class="fas fa-folder-open me-1"></i>Espandi tutti
                    </button>
                    <button type="button" id="btnCollapseAll" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-folder me-1"></i>Comprimi tutti
                    </button>
                </div>
                <div id="bulkActions" style="display: none;">
                    <button type="button" id="btnDownloadZip" class="btn btn-success btn-sm me-1">
                        <i class="fas fa-download me-1"></i>ZIP (<span id="downloadCount">0</span>)
                    </button>
                    <button type="button" id="btnDeleteSelected" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash me-1"></i>Elimina (<span id="deleteCount">0</span>)
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <form id="formBulkAction" method="post">
                    @Html.AntiForgeryToken()
                    <div class="accordion" id="accordionCartelle">
                        @{
                            int index = 0;
                        }
                        @foreach (var cartella in cartelleClienti)
                        {
                            var documenti = cartella.OrderByDescending(d => d.GeneratoIl).ToList();
                            var cartellaId = $"cartella_{index}";
                            var docIds = string.Join(",", documenti.Select(d => d.Id));
                            index++;
                            
                            <div class="accordion-item">
                                <h2 class="accordion-header d-flex align-items-center">
                                    <button class="accordion-button collapsed py-2 flex-grow-1" type="button" 
                                            data-bs-toggle="collapse" data-bs-target="#@cartellaId">
                                        <div class="d-flex align-items-center w-100 me-3">
                                            <i class="fas fa-folder text-warning fa-lg me-3"></i>
                                            <div class="flex-grow-1">
                                                <strong class="fs-6">@cartella.Key.Nome</strong>
                                            </div>
                                            <span class="badge bg-primary rounded-pill me-2">
                                                @documenti.Count documento@(documenti.Count != 1 ? "i" : "")
                                            </span>
                                            <small class="text-muted">
                                                Ultimo: @documenti.First().GeneratoIl.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                    </button>
                                    <div class="me-3">
                                        <button type="button" class="btn btn-success btn-sm btn-zip-cartella" 
                                                data-ids="@docIds" title="Scarica ZIP cartella">
                                            <i class="fas fa-file-archive me-1"></i>ZIP
                                        </button>
                                    </div>
                                </h2>
                                <div id="@cartellaId" class="accordion-collapse collapse" data-bs-parent="#accordionCartelle">
                                    <div class="accordion-body p-0">
                                        <table class="table table-sm table-hover mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th style="width: 35px;" class="text-center">
                                                        <input type="checkbox" class="form-check-input select-all-cartella" 
                                                               data-cartella="@cartellaId" style="width: 16px; height: 16px;">
                                                    </th>
                                                    <th style="width: 100px;">Data</th>
                                                    <th>Template</th>
                                                    <th>Nome File</th>
                                                    <th style="width: 70px;" class="text-center">Tipo</th>
                                                    <th style="width: 90px;" class="text-center">Azioni</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var doc in documenti)
                                                {
                                                    <tr>
                                                        <td class="text-center align-middle">
                                                            <input type="checkbox" class="form-check-input doc-checkbox" 
                                                                   name="documentoIds" value="@doc.Id" data-cartella="@cartellaId"
                                                                   style="width: 16px; height: 16px;">
                                                        </td>
                                                        <td class="align-middle">
                                                            <small>@doc.GeneratoIl.ToString("dd/MM/yyyy")</small>
                                                            <br><small class="text-muted">@doc.GeneratoIl.ToString("HH:mm")</small>
                                                        </td>
                                                        <td class="align-middle">
                                                            <small>@doc.TemplateDocumento?.Nome</small>
                                                        </td>
                                                        <td class="align-middle">
                                                            <small class="text-truncate d-inline-block" style="max-width: 250px;" title="@doc.NomeFile">
                                                                @doc.NomeFile
                                                            </small>
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            @if (doc.TipoOutput == StudioCG.Web.Models.Documenti.TipoOutputDocumento.PDF)
                                                            {
                                                                <span class="badge bg-danger" style="font-size: 0.7rem;">PDF</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-primary" style="font-size: 0.7rem;">Word</span>
                                                            }
                                                        </td>
                                                        <td class="text-center align-middle">
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="@Url.Action("DownloadDocumento", new { id = doc.Id })" 
                                                                   class="btn btn-outline-success btn-sm py-0" title="Scarica">
                                                                    <i class="fas fa-download"></i>
                                                                </a>
                                                                <button type="button" class="btn btn-outline-danger btn-sm py-0 btn-delete-single" 
                                                                        data-id="@doc.Id" data-nome="@doc.NomeFile" title="Elimina">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5 text-muted">
                <i class="fas fa-folder-open fa-3x mb-3"></i>
                @if (filtroCliente.HasValue || filtroTemplate.HasValue || filtroDataDa.HasValue || filtroDataA.HasValue)
                {
                    <p>Nessun documento trovato con i filtri selezionati.</p>
                    <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Rimuovi filtri
                    </a>
                }
                else
                {
                    <p>Nessun documento in archivio.</p>
                    <a href="@Url.Action("Genera")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Genera il primo documento
                    </a>
                }
            </div>
        </div>
    }
</div>

<!-- Form nascosto per eliminazione singola -->
<form id="formDeleteSingle" asp-action="DeleteDocumento" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteDocId" />
</form>

<style>
    .accordion-button:not(.collapsed) .fa-folder {
        display: none;
    }
    .accordion-button:not(.collapsed)::before {
        content: '\f07c'; /* fa-folder-open */
        font-family: 'Font Awesome 5 Free';
        font-weight: 900;
        color: #ffc107;
        font-size: 1.25rem;
        margin-right: 1rem;
    }
    .accordion-button.collapsed::before {
        content: '';
    }
    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(0,0,0,.125);
    }
    .accordion-button::after {
        margin-left: 0;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const bulkActions = document.getElementById('bulkActions');
    const downloadCountSpan = document.getElementById('downloadCount');
    const deleteCountSpan = document.getElementById('deleteCount');
    const formBulkAction = document.getElementById('formBulkAction');
    
    // Espandi tutti
    document.getElementById('btnExpandAll').addEventListener('click', function() {
        document.querySelectorAll('.accordion-collapse').forEach(el => {
            new bootstrap.Collapse(el, { show: true });
        });
    });
    
    // Comprimi tutti
    document.getElementById('btnCollapseAll').addEventListener('click', function() {
        document.querySelectorAll('.accordion-collapse.show').forEach(el => {
            new bootstrap.Collapse(el, { hide: true });
        });
    });
    
    // Seleziona tutti di una cartella
    document.querySelectorAll('.select-all-cartella').forEach(cb => {
        cb.addEventListener('change', function() {
            const cartellaId = this.getAttribute('data-cartella');
            document.querySelectorAll(`.doc-checkbox[data-cartella="${cartellaId}"]`).forEach(docCb => {
                docCb.checked = this.checked;
            });
            updateSelectionUI();
        });
    });
    
    // Singole checkbox
    document.querySelectorAll('.doc-checkbox').forEach(cb => {
        cb.addEventListener('change', function() {
            updateCartellaCheckbox(this.getAttribute('data-cartella'));
            updateSelectionUI();
        });
    });
    
    function updateCartellaCheckbox(cartellaId) {
        const cartellaCheckboxes = document.querySelectorAll(`.doc-checkbox[data-cartella="${cartellaId}"]`);
        const checkedInCartella = document.querySelectorAll(`.doc-checkbox[data-cartella="${cartellaId}"]:checked`).length;
        const selectAllCb = document.querySelector(`.select-all-cartella[data-cartella="${cartellaId}"]`);
        
        if (selectAllCb) {
            selectAllCb.checked = checkedInCartella === cartellaCheckboxes.length && cartellaCheckboxes.length > 0;
            selectAllCb.indeterminate = checkedInCartella > 0 && checkedInCartella < cartellaCheckboxes.length;
        }
    }
    
    function updateSelectionUI() {
        const checkedCount = document.querySelectorAll('.doc-checkbox:checked').length;
        
        if (checkedCount > 0) {
            bulkActions.style.display = 'block';
            downloadCountSpan.textContent = checkedCount;
            deleteCountSpan.textContent = checkedCount;
        } else {
            bulkActions.style.display = 'none';
        }
    }
    
    // Scarica ZIP
    document.getElementById('btnDownloadZip').addEventListener('click', function() {
        const selectedIds = Array.from(document.querySelectorAll('.doc-checkbox:checked')).map(cb => cb.value);
        if (selectedIds.length === 0) return;
        
        const params = selectedIds.map(id => 'ids=' + id).join('&');
        window.location.href = '@Url.Action("DownloadZipDocumenti")?' + params;
    });
    
    // Elimina selezionati
    document.getElementById('btnDeleteSelected').addEventListener('click', function() {
        const checkedCount = document.querySelectorAll('.doc-checkbox:checked').length;
        if (checkedCount === 0) return;
        
        if (confirm(`Eliminare ${checkedCount} documento/i?\n\nQuesta azione non puÃ² essere annullata.`)) {
            formBulkAction.action = '@Url.Action("DeleteDocumentiMultipli")';
            formBulkAction.submit();
        }
    });
    
    // Elimina singolo
    document.querySelectorAll('.btn-delete-single').forEach(btn => {
        btn.addEventListener('click', function() {
            const id = this.getAttribute('data-id');
            const nome = this.getAttribute('data-nome');
            
            if (confirm(`Eliminare il documento "${nome}"?`)) {
                document.getElementById('deleteDocId').value = id;
                document.getElementById('formDeleteSingle').submit();
            }
        });
    });
    
    // ZIP intera cartella
    document.querySelectorAll('.btn-zip-cartella').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.stopPropagation(); // Non aprire/chiudere accordion
            const ids = this.getAttribute('data-ids');
            if (!ids) return;
            
            const params = ids.split(',').map(id => 'ids=' + id).join('&');
            window.location.href = '@Url.Action("DownloadZipDocumenti")?' + params;
        });
    });
});
</script>
