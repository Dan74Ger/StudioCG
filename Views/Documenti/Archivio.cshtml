@model List<StudioCG.Web.Controllers.CartellaClienteViewModel>
@{
    ViewData["Title"] = "Archivio Documenti";
    var search = ViewBag.Search as string;
    var totaleDocumenti = ViewBag.TotaleDocumenti as int? ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-archive me-2"></i>Archivio Documenti</h2>
            <small class="text-muted">
                <i class="fas fa-folder me-1"></i>@Model.Count cartelle cliente &bull; 
                <i class="fas fa-file me-1"></i>@totaleDocumenti documenti totali
            </small>
        </div>
        <div>
            <a href="@Url.Action("ControlloAntiriciclaggio")" class="btn btn-warning">
                <i class="fas fa-shield-alt me-1"></i>Controllo Antiriciclaggio
            </a>
            <a href="@Url.Action("Genera")" class="btn btn-primary ms-2">
                <i class="fas fa-plus me-1"></i>Genera Nuovo
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Ricerca -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-10">
                    <label class="form-label"><i class="fas fa-search me-1"></i>Cerca cliente</label>
                    <input type="text" name="search" class="form-control" placeholder="Inserisci il nome del cliente..." value="@search" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Cerca
                    </button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(search))
            {
                <div class="mt-2">
                    <a href="@Url.Action("Archivio")" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Rimuovi filtro
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Lista Cartelle Clienti -->
    <div class="card">
        @if (Model.Any())
        {
            <!-- Barra azioni multi-selezione -->
            <div class="card-header bg-light d-flex justify-content-between align-items-center py-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="d-flex align-items-center">
                        <input type="checkbox" id="selectAll" class="form-check-input checkbox-nero m-0" title="Seleziona tutte">
                        <label class="form-check-label ms-2" for="selectAll" style="cursor: pointer;">Seleziona tutte</label>
                    </div>
                    <span id="selectedCount" class="text-muted small"></span>
                </div>
                <button type="button" id="btnDeleteSelected" class="btn btn-danger btn-sm" style="display: none;">
                    <i class="fas fa-trash me-1"></i>Elimina cartelle (<span id="deleteCount">0</span>)
                </button>
            </div>
        }
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <form id="formDeleteCartelle" asp-action="DeleteCartelleClienti" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row g-3 p-3">
                        @foreach (var cartella in Model)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="card h-100 border cartella-cliente position-relative" style="transition: all 0.2s ease;">
                                    <!-- Checkbox selezione -->
                                    <div class="position-absolute top-0 start-0 m-2 z-1">
                                        <div class="form-check">
                                            <input type="checkbox" name="clienteIds" value="@cartella.ClienteId" 
                                                   class="form-check-input checkbox-nero cartella-checkbox" 
                                                   id="cartella_@cartella.ClienteId"
                                                   onclick="event.stopPropagation();">
                                        </div>
                                    </div>
                                    <a href="@Url.Action("ArchivioCliente", new { clienteId = cartella.ClienteId })" class="text-decoration-none cartella-link">
                                        <div class="card-body text-center pt-4">
                                            <div class="mb-3">
                                                <i class="fas fa-folder fa-4x text-warning"></i>
                                            </div>
                                            <h6 class="card-title text-dark mb-2 text-truncate" title="@cartella.NomeCliente">
                                                @cartella.NomeCliente
                                            </h6>
                                            <div class="text-muted small">
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-file me-1"></i>@cartella.NumeroDocumenti documento/i
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-light small text-muted">
                                            <i class="fas fa-clock me-1"></i>Ultimo: @cartella.UltimoDocumento.ToString("dd/MM/yyyy")
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </form>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-folder-open fa-3x mb-3"></i>
                    @if (!string.IsNullOrEmpty(search))
                    {
                        <p>Nessun cliente trovato con il nome "<strong>@search</strong>".</p>
                        <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Rimuovi filtro
                        </a>
                    }
                    else
                    {
                        <p>Nessun documento in archivio.</p>
                        <a href="@Url.Action("Genera")" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Genera il primo documento
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .cartella-cliente:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        border-color: #ffc107 !important;
    }
    .cartella-cliente:hover .fa-folder {
        transform: scale(1.1);
        transition: transform 0.2s ease;
    }
    .cartella-cliente.selected {
        border: 3px solid #212529 !important;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }
    
    /* Checkbox nero ben visibile */
    .checkbox-nero {
        width: 22px;
        height: 22px;
        border: 3px solid #212529 !important;
        background-color: #fff;
        cursor: pointer;
    }
    .checkbox-nero:checked {
        background-color: #212529 !important;
        border-color: #212529 !important;
    }
    .checkbox-nero:focus {
        box-shadow: 0 0 0 0.25rem rgba(33, 37, 41, 0.25);
    }
    
    .z-1 {
        z-index: 10;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const selectAllCheckbox = document.getElementById('selectAll');
    const cartellaCheckboxes = document.querySelectorAll('.cartella-checkbox');
    const btnDeleteSelected = document.getElementById('btnDeleteSelected');
    const deleteCountSpan = document.getElementById('deleteCount');
    const selectedCountSpan = document.getElementById('selectedCount');
    const formDeleteCartelle = document.getElementById('formDeleteCartelle');
    
    // Gestione Seleziona tutte
    if (selectAllCheckbox) {
        selectAllCheckbox.addEventListener('change', function() {
            cartellaCheckboxes.forEach(cb => {
                cb.checked = this.checked;
                updateCardStyle(cb);
            });
            updateSelectionCount();
        });
    }
    
    // Gestione singole checkbox
    cartellaCheckboxes.forEach(cb => {
        cb.addEventListener('change', function() {
            updateCardStyle(this);
            updateSelectionCount();
        });
    });
    
    function updateCardStyle(checkbox) {
        const card = checkbox.closest('.cartella-cliente');
        if (checkbox.checked) {
            card.classList.add('selected');
        } else {
            card.classList.remove('selected');
        }
    }
    
    function updateSelectionCount() {
        const checkedCount = document.querySelectorAll('.cartella-checkbox:checked').length;
        const totalCount = cartellaCheckboxes.length;
        
        if (checkedCount > 0) {
            btnDeleteSelected.style.display = 'inline-block';
            deleteCountSpan.textContent = checkedCount;
            selectedCountSpan.textContent = `${checkedCount} di ${totalCount} selezionate`;
        } else {
            btnDeleteSelected.style.display = 'none';
            selectedCountSpan.textContent = '';
        }
        
        // Aggiorna stato "Seleziona tutte"
        if (selectAllCheckbox) {
            selectAllCheckbox.checked = checkedCount === totalCount && totalCount > 0;
            selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < totalCount;
        }
    }
    
    // Elimina cartelle selezionate
    if (btnDeleteSelected) {
        btnDeleteSelected.addEventListener('click', function() {
            const checkedCount = document.querySelectorAll('.cartella-checkbox:checked').length;
            if (checkedCount === 0) return;
            
            if (confirm(`⚠️ ATTENZIONE!\n\nStai per eliminare ${checkedCount} cartella/e e TUTTI i documenti al loro interno.\n\nQuesta azione non può essere annullata.\n\nContinuare?`)) {
                formDeleteCartelle.submit();
            }
        });
    }
});
</script>
