@model List<StudioCG.Web.Models.Documenti.TemplateDocumento>
@{
    ViewData["Title"] = "Gestione Template";
    var categorie = ViewBag.Categorie as List<string>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-signature me-2"></i>Template Documenti</h2>
        <div>
            <a href="@Url.Action("TemplateEditor")" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Nuovo Template
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i>Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var categoria in categorie!)
        {
            var templateCategoria = Model.Where(t => t.Categoria == categoria).ToList();
            if (!templateCategoria.Any()) continue;

            <div class="col-12 mb-4">
                <h5 class="text-muted mb-3">
                    <i class="fas fa-folder me-2"></i>@categoria
                    <span class="badge bg-secondary">@templateCategoria.Count</span>
                </h5>
                <div class="row">
                    @foreach (var template in templateCategoria.OrderBy(t => t.Ordine).ThenBy(t => t.Nome))
                    {
                        <div class="col-md-4 col-lg-3 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-file-alt text-primary me-2"></i>@template.Nome
                                    </h5>
                                    @if (!string.IsNullOrEmpty(template.Descrizione))
                                    {
                                        <p class="card-text text-muted small">@template.Descrizione</p>
                                    }
                                    <div class="mb-2">
                                        @if (template.RichiestaMandato)
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-file-contract me-1"></i>Richiede Mandato</span>
                                        }
                                        @if (template.TipoOutputDefault == StudioCG.Web.Models.Documenti.TipoOutputDocumento.PDF)
                                        {
                                            <span class="badge bg-danger"><i class="fas fa-file-pdf me-1"></i>PDF</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary"><i class="fas fa-file-word me-1"></i>Word</span>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100">
                                        <a href="@Url.Action("TemplateEditor", new { id = template.Id })" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit me-1"></i>Modifica
                                        </a>
                                        <a href="@Url.Action("Genera", new { templateId = template.Id })" class="btn btn-sm btn-success">
                                            <i class="fas fa-play me-1"></i>Usa
                                        </a>
                                        <form asp-action="DeleteTemplate" method="post" class="d-inline" onsubmit="return confirm('Eliminare questo template?')">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@template.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-file-signature fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Nessun template creato.</p>
                        <a href="@Url.Action("TemplateEditor")" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Crea il primo template
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

