@model List<StudioCG.Web.Controllers.ControlloAntiriciclaggioViewModel>
@{
    ViewData["Title"] = "Controllo Antiriciclaggio";
    var dataLimite = ViewBag.DataLimite as DateTime? ?? DateTime.Today;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Documenti</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Archivio")">Archivio</a></li>
                    <li class="breadcrumb-item active">Controllo Antiriciclaggio</li>
                </ol>
            </nav>
            <h2>
                <i class="fas fa-shield-alt text-primary me-2"></i>Controllo Antiriciclaggio
            </h2>
            <small class="text-muted">
                Verifica documenti antiriciclaggio clienti rispetto alla data limite
            </small>
        </div>
        <div>
            <a href="@Url.Action("Archivio")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Torna all'Archivio
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Impostazione Data Limite -->
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Impostazione Data Limite Antiriciclaggio</h6>
        </div>
        <div class="card-body">
            <form asp-action="SalvaDataLimiteAntiriciclaggio" method="post" class="row g-3 align-items-end">
                @Html.AntiForgeryToken()
                <div class="col-md-4">
                    <label class="form-label"><strong>Data Limite</strong></label>
                    <input type="date" name="dataLimite" class="form-control form-control-lg" 
                           value="@dataLimite.ToString("yyyy-MM-dd")" required />
                    <small class="text-muted">Documenti generati PRIMA di questa data saranno SCADUTI</small>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-1"></i>Salva Data
                    </button>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info mb-0 py-2">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Data limite attuale:</strong> <span class="fs-5">@dataLimite.ToString("dd/MM/yyyy")</span>
                        <br>
                        <small>
                            â€¢ <span class="text-danger"><strong>SCADUTO</strong></span>: documento generato <strong>PRIMA</strong> del @dataLimite.ToString("dd/MM/yyyy")<br>
                            â€¢ <span class="text-success"><strong>OK</strong></span>: documento generato <strong>UGUALE o DOPO</strong> il @dataLimite.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Statistiche Riepilogo -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body text-center py-3">
                    <h2 class="mb-0">@ViewBag.TotaleScaduti</h2>
                    <small><i class="fas fa-times-circle me-1"></i>Scaduti (da aggiornare)</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center py-3">
                    <h2 class="mb-0">@ViewBag.TotaleOk</h2>
                    <small><i class="fas fa-check-circle me-1"></i>In Regola</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-3">
                    <h2 class="mb-0">@ViewBag.TotaleClienti</h2>
                    <small><i class="fas fa-users me-1"></i>Totale Clienti</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtri -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label class="form-label"><i class="fas fa-search me-1"></i>Cerca cliente</label>
                    <input type="text" name="searchCliente" class="form-control" 
                           placeholder="Nome cliente..." value="@ViewBag.SearchCliente" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Stato</label>
                    <select name="statoScadenza" class="form-select">
                        <option value="">-- Tutti --</option>
                        <option value="scaduti" selected="@(ViewBag.StatoScadenza == "scaduti")">ðŸ”´ Scaduti</option>
                        <option value="ok" selected="@(ViewBag.StatoScadenza == "ok")">ðŸŸ¢ In Regola</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-1"></i>Filtra
                    </button>
                    <a href="@Url.Action("ControlloAntiriciclaggio")" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabella Risultati -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="fas fa-list me-2"></i>Elenco Clienti (@Model.Count risultati)</h6>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">Stato</th>
                                <th>Cliente</th>
                                <th>Ultimo Documento</th>
                                <th>Tipo</th>
                                <th>Data Documento</th>
                                <th>Confronto Data Limite</th>
                                <th>Stato</th>
                                <th class="text-end">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var rowClass = item.IsScaduto ? "table-danger" : "";
                                var badgeClass = item.IsScaduto ? "bg-danger" : "bg-success";
                                var statoText = item.IsScaduto ? "SCADUTO" : "OK";
                                var statoIcon = item.IsScaduto ? "fas fa-times-circle" : "fas fa-check-circle";

                                <tr class="@rowClass">
                                    <td class="text-center align-middle">
                                        <span class="badge @badgeClass">
                                            <i class="@statoIcon"></i>
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        <strong>@item.NomeCliente</strong>
                                        @if (item.TotaleDocumenti > 1)
                                        {
                                            <br><small class="text-muted">(@item.TotaleDocumenti documenti antiriciclaggio)</small>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-muted">@item.NomeFile</small>
                                    </td>
                                    <td class="align-middle">
                                        @if (item.TipoDocumento.Contains("nuovi"))
                                        {
                                            <span class="badge bg-info">Nuovi Clienti</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Aggiornamento</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <strong class="@(item.IsScaduto ? "text-danger" : "text-success")">
                                            @item.DataUltimoDocumento.ToString("dd/MM/yyyy")
                                        </strong>
                                        <br><small class="text-muted">@item.DataUltimoDocumento.ToString("HH:mm")</small>
                                    </td>
                                    <td class="align-middle text-center">
                                        @if (item.GiorniDifferenza < 0)
                                        {
                                            <span class="badge bg-danger fs-6">@item.GiorniDifferenza gg</span>
                                            <br><small class="text-danger">prima del limite</small>
                                        }
                                        else if (item.GiorniDifferenza == 0)
                                        {
                                            <span class="badge bg-success fs-6">= Data Limite</span>
                                            <br><small class="text-success">stesso giorno</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success fs-6">+@item.GiorniDifferenza gg</span>
                                            <br><small class="text-success">dopo il limite</small>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge @badgeClass fs-6">@statoText</span>
                                        @if (item.IsScaduto)
                                        {
                                            <br><small class="text-danger"><strong>Richiede aggiornamento!</strong></small>
                                        }
                                    </td>
                                    <td class="text-end align-middle">
                                        <a href="@Url.Action("DownloadDocumento", new { id = item.DocumentoId })" 
                                           class="btn btn-sm btn-outline-primary" title="Scarica documento">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        <a href="@Url.Action("ArchivioCliente", new { clienteId = item.ClienteId })" 
                                           class="btn btn-sm btn-outline-secondary" title="Vai alla cartella cliente">
                                            <i class="fas fa-folder-open"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-shield-alt fa-3x mb-3"></i>
                    <p>Nessun documento antiriciclaggio trovato.</p>
                    <p class="small">Genera documenti con template "Antiriciclaggio (nuovi clienti)" o "Antiriciclaggio aggiornamento"</p>
                </div>
            }
        </div>
    </div>

    <!-- Filtri rapidi -->
    <div class="mt-3">
        <small class="text-muted">Filtri rapidi: </small>
        <a href="@Url.Action("ControlloAntiriciclaggio", new { statoScadenza = "scaduti" })" class="btn btn-sm btn-outline-danger me-1">
            <i class="fas fa-times-circle me-1"></i>Solo Scaduti
        </a>
        <a href="@Url.Action("ControlloAntiriciclaggio", new { statoScadenza = "ok" })" class="btn btn-sm btn-outline-success me-1">
            <i class="fas fa-check-circle me-1"></i>In Regola
        </a>
    </div>
</div>
