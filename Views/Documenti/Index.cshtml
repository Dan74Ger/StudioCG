@model StudioCG.Web.Controllers.DocumentiDashboardViewModel
@{
    ViewData["Title"] = "Documenti - Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-alt me-2"></i>Gestione Documenti</h2>
    </div>

    @if (!Model.ConfigurazionePresente)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Configurazione mancante!</strong> 
            <a href="@Url.Action("ImpostazioniStudio")" class="alert-link">Configura i dati dello studio</a> 
            per poter generare documenti con intestazione personalizzata.
        </div>
    }

    <!-- Statistiche -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Template</h6>
                            <h2 class="mb-0">@Model.NumeroTemplate</h2>
                        </div>
                        <i class="fas fa-file-signature fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Template")" class="text-white text-decoration-none small">
                        Gestisci Template <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Clausole</h6>
                            <h2 class="mb-0">@Model.NumeroClausole</h2>
                        </div>
                        <i class="fas fa-paragraph fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Clausole")" class="text-white text-decoration-none small">
                        Gestisci Clausole <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Documenti Generati</h6>
                            <h2 class="mb-0">@Model.NumeroDocumentiGenerati</h2>
                        </div>
                        <i class="fas fa-archive fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Archivio")" class="text-white text-decoration-none small">
                        Vai all'Archivio <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Genera</h6>
                            <h2 class="mb-0"><i class="fas fa-plus"></i></h2>
                        </div>
                        <i class="fas fa-file-export fa-2x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="@Url.Action("Genera")" class="text-dark text-decoration-none small">
                        Nuovo Documento <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Azioni Rapide -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Azioni Rapide</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="@Url.Action("ImpostazioniStudio")" class="btn btn-outline-secondary w-100 py-3">
                                <i class="fas fa-building fa-2x d-block mb-2"></i>
                                Impostazioni Studio
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("TemplateEditor")" class="btn btn-outline-primary w-100 py-3">
                                <i class="fas fa-plus fa-2x d-block mb-2"></i>
                                Nuovo Template
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Clausole")" class="btn btn-outline-success w-100 py-3">
                                <i class="fas fa-paragraph fa-2x d-block mb-2"></i>
                                Gestisci Clausole
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Genera")" class="btn btn-warning w-100 py-3 text-dark">
                                <i class="fas fa-file-export fa-2x d-block mb-2"></i>
                                Genera Documento
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Ultimi Documenti -->
    <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Ultimi Documenti Generati</h5>
            <a href="@Url.Action("Archivio")" class="btn btn-sm btn-outline-primary">
                Vedi tutti <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model.UltimiDocumenti.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Data</th>
                            <th>Cliente</th>
                            <th>Template</th>
                            <th>Tipo</th>
                            <th class="text-end">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.UltimiDocumenti)
                        {
                            <tr>
                                <td>@doc.GeneratoIl.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@doc.Cliente?.RagioneSociale</td>
                                <td>@doc.TemplateDocumento?.Nome</td>
                                <td>
                                    @if (doc.TipoOutput == StudioCG.Web.Models.Documenti.TipoOutputDocumento.PDF)
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-file-pdf me-1"></i>PDF</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary"><i class="fas fa-file-word me-1"></i>Word</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="@Url.Action("DownloadDocumento", new { id = doc.Id })" class="btn btn-sm btn-outline-primary" title="Scarica">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p>Nessun documento generato ancora.</p>
                    <a href="@Url.Action("Genera")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Genera il primo documento
                    </a>
                </div>
            }
        </div>
    </div>
</div>

