@model List<StudioCG.Web.Models.Fatturazione.BilancioCEE>
@using StudioCG.Web.Models.Fatturazione
@{
    ViewData["Title"] = "Bilanci CEE";
    var annoSelezionato = (int)ViewBag.AnnoSelezionato;
    var anniDisponibili = (List<int>)ViewBag.AnniDisponibili;
    var clientiSC = (List<StudioCG.Web.Models.Cliente>)ViewBag.ClientiSC;
    var meseSelezionato = (int?)ViewBag.MeseSelezionato;
    
    var mesi = new Dictionary<int, string>
    {
        {1, "Gennaio"}, {2, "Febbraio"}, {3, "Marzo"}, {4, "Aprile"},
        {5, "Maggio"}, {6, "Giugno"}, {7, "Luglio"}, {8, "Agosto"},
        {9, "Settembre"}, {10, "Ottobre"}, {11, "Novembre"}, {12, "Dicembre"}
    };
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h4 class="mb-0"><i class="fas fa-balance-scale me-2 text-warning"></i>Bilanci CEE</h4>
                <small class="text-muted">Gestione Bilanci CEE per Società di Capitali - Anno @annoSelezionato</small>
            </div>
            <div class="d-flex gap-2">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-calendar-alt me-2"></i>Anno @annoSelezionato
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @foreach (var anno in anniDisponibili)
                        {
                            <li>
                                <a class="dropdown-item @(anno == annoSelezionato ? "active" : "")" 
                                   asp-action="BilanciCEE" asp-route-anno="@anno">@anno</a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="fas fa-calendar-week me-2"></i>@(meseSelezionato.HasValue && meseSelezionato.Value > 0 ? mesi[meseSelezionato.Value] : "Tutti i mesi")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item @(!meseSelezionato.HasValue || meseSelezionato.Value == 0 ? "active" : "")" 
                               asp-action="BilanciCEE" asp-route-anno="@annoSelezionato" asp-route-mese="">
                                Tutti i mesi
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        @foreach (var mese in mesi)
                        {
                            <li>
                                <a class="dropdown-item @(meseSelezionato == mese.Key ? "active" : "")" 
                                   asp-action="BilanciCEE" asp-route-anno="@annoSelezionato" asp-route-mese="@mese.Key">
                                    @mese.Value
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                @if (clientiSC.Any())
                {
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalNuovo">
                        <i class="fas fa-plus me-2"></i>Aggiungi Bilancio
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Statistiche -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small opacity-75">Bilanci Inseriti</div>
                            <div class="fs-4 fw-bold">@Model.Count</div>
                        </div>
                        <i class="fas fa-file-alt fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small opacity-75">Importo Totale</div>
                            <div class="fs-4 fw-bold">@Model.Sum(b => b.Importo).ToString("C", new System.Globalization.CultureInfo("it-IT"))</div>
                        </div>
                        <i class="fas fa-euro-sign fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-secondary text-white">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small opacity-75">SC senza Bilancio</div>
                            <div class="fs-4 fw-bold">@clientiSC.Count</div>
                        </div>
                        <i class="fas fa-building fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabella -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Bilanci CEE (@Model.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Cliente</th>
                                <th class="text-end">Importo</th>
                                <th>Scadenza</th>
                                <th>Stato Scad.</th>
                                <th class="text-center">Azioni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var b in Model)
                            {
                                // Bilanci CEE sono SEMPRE modificabili/cancellabili
                                <tr>
                                    <td>
                                        <strong>@b.Cliente?.RagioneSociale</strong>
                                        <span class="badge bg-warning text-dark ms-2">SC</span>
                                    </td>
                                    <td class="text-end fw-bold">
                                        @b.Importo.ToString("C", new System.Globalization.CultureInfo("it-IT"))
                                        @if (b.FatturazioneSeparata)
                                        {
                                            <span class="badge bg-warning text-dark ms-1" title="Fatturazione Separata">
                                                <i class="fas fa-file-invoice"></i> Sep.
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (b.ScadenzaFatturazione != null)
                                        {
                                            <span class="badge bg-light text-dark">
                                                @b.ScadenzaFatturazione.DataScadenza.ToString("dd/MM/yyyy")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (b.ScadenzaFatturazione != null)
                                        {
                                            @switch (b.ScadenzaFatturazione.Stato)
                                            {
                                                case StatoScadenza.Aperta:
                                                    <span class="badge bg-secondary">Aperta</span>
                                                    break;
                                                case StatoScadenza.Proforma:
                                                    <span class="badge bg-warning text-dark">Proforma</span>
                                                    break;
                                                case StatoScadenza.Fatturata:
                                                    <span class="badge bg-success">Fatturata</span>
                                                    break;
                                            }
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary" title="Modifica"
                                                    data-bs-toggle="modal" data-bs-target="#modalEdit"
                                                    data-id="@b.Id"
                                                    data-cliente="@b.Cliente?.RagioneSociale"
                                                    data-importo="@b.Importo.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)"
                                                    data-datascadenza="@(b.ScadenzaFatturazione?.DataScadenza.ToString("yyyy-MM-dd") ?? b.DataScadenza.ToString("yyyy-MM-dd"))"
                                                    data-fattseparata="@b.FatturazioneSeparata.ToString().ToLower()">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <form asp-action="DeleteBilancioCEE" method="post" class="d-inline"
                                                  onsubmit="return confirm('Rimuovere il bilancio CEE per questo cliente?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@b.Id" />
                                                <input type="hidden" name="anno" value="@annoSelezionato" />
                                                <button type="submit" class="btn btn-outline-danger" title="Elimina">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr class="fw-bold">
                                <td>TOTALE</td>
                                <td class="text-end">@Model.Sum(b => b.Importo).ToString("C", new System.Globalization.CultureInfo("it-IT"))</td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-balance-scale fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nessun bilancio CEE inserito</h5>
                    <p class="text-muted">Clicca "Aggiungi Bilancio" per iniziare (solo clienti SC)</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Nuovo -->
<div class="modal fade" id="modalNuovo" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateBilancioCEE" method="post">
                <input type="hidden" name="anno" value="@annoSelezionato" />
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="fas fa-plus me-2"></i>Aggiungi Bilancio CEE</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>Solo per clienti di tipo <strong>SC</strong> (Società di Capitali)
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cliente SC <span class="text-danger">*</span></label>
                        <select name="clienteId" id="selectClienteNuovo" class="form-select" required>
                            <option value="">-- Seleziona Cliente --</option>
                            @foreach (var cliente in clientiSC)
                            {
                                <option value="@cliente.Id">@cliente.RagioneSociale</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Data Scadenza <span class="text-danger">*</span></label>
                        <input type="date" name="dataScadenza" class="form-control" required 
                               value="@(new DateTime(annoSelezionato, 3, 31).ToString("yyyy-MM-dd"))">
                        <small class="form-text text-muted">Default: 31/03 - Se esiste scadenza con questa data, verrà collegata automaticamente</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Scadenza (opzionale)</label>
                        <select name="scadenzaFatturazioneId" id="selectScadenzaNuovo" class="form-select">
                            <option value="">-- Collegamento automatico per data --</option>
                        </select>
                        <small class="form-text text-muted">Lascia vuoto per collegamento automatico</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Importo <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input type="text" name="importo" class="form-control" required 
                                   value="500,00" placeholder="0,00">
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="fatturazioneSeparata" value="true" class="form-check-input" id="chkFattSeparataNuovo">
                            <label class="form-check-label" for="chkFattSeparataNuovo">
                                <i class="fas fa-file-invoice text-warning me-1"></i>Fatturazione Separata
                            </label>
                            <small class="form-text text-muted d-block">Se selezionato, questo bilancio verrà fatturato come riga singola separata</small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-2"></i>Salva
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Modifica -->
<div class="modal fade" id="modalEdit" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="UpdateBilancioCEE" method="post">
                <input type="hidden" name="id" id="editId" />
                <input type="hidden" name="anno" value="@annoSelezionato" />
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Modifica</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Cliente</label>
                        <input type="text" id="editCliente" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Importo <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input type="text" name="importo" id="editImporto" class="form-control" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" name="fatturazioneSeparata" value="true" class="form-check-input" id="editFattSeparata">
                            <label class="form-check-label" for="editFattSeparata">
                                <i class="fas fa-file-invoice text-warning me-1"></i>Fatturazione Separata
                            </label>
                            <small class="form-text text-muted d-block">Se selezionato, questo bilancio verrà fatturato come riga singola separata</small>
                        </div>
                    </div>
                    <div class="mb-3" id="editDataScadenzaSeparataContainer" style="display: none;">
                        <label class="form-label">Data Scadenza Fatturazione <span class="text-danger">*</span></label>
                        <input type="date" name="dataScadenzaSeparata" id="editDataScadenzaSeparata" class="form-control">
                        <small class="form-text text-muted">Data della scadenza per la fatturazione separata</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Salva
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var annoCorrente = @annoSelezionato;
    
    document.getElementById('selectClienteNuovo').addEventListener('change', function() {
        var clienteId = this.value;
        var selectScadenza = document.getElementById('selectScadenzaNuovo');
        
        if (!clienteId) {
            selectScadenza.innerHTML = '<option value="">-- Prima seleziona un cliente --</option>';
            return;
        }
        
        fetch('/Amministrazione/GetScadenzeCliente?clienteId=' + clienteId + '&anno=' + annoCorrente)
            .then(response => response.json())
            .then(data => {
                selectScadenza.innerHTML = '<option value="">-- Seleziona scadenza --</option>';
                data.forEach(function(scad) {
                    var opt = document.createElement('option');
                    opt.value = scad.id;
                    opt.textContent = scad.dataScadenza + ' - ' + scad.stato;
                    opt.setAttribute('data-datascadenza', scad.dataScadenzaISO);
                    // Default 31/03
                    if (scad.dataScadenza.includes('31/03')) opt.selected = true;
                    selectScadenza.appendChild(opt);
                });
                
                // Aggiorna data scadenza nel form se selezionata automaticamente
                var selectedOption = selectScadenza.options[selectScadenza.selectedIndex];
                var dataScadenza = selectedOption.getAttribute('data-datascadenza');
                if (dataScadenza) {
                    document.querySelector('#modalNuovo input[name="dataScadenza"]').value = dataScadenza;
                }
            });
    });
    
    // Aggiorna data scadenza quando cambia selezione
    document.getElementById('selectScadenzaNuovo').addEventListener('change', function() {
        var selectedOption = this.options[this.selectedIndex];
        var dataScadenza = selectedOption.getAttribute('data-datascadenza');
        if (dataScadenza) {
            document.querySelector('#modalNuovo input[name="dataScadenza"]').value = dataScadenza;
        }
    });
    
    // Mostra/Nascondi campo data scadenza separata (modifica)
    document.getElementById('editFattSeparata').addEventListener('change', function() {
        var container = document.getElementById('editDataScadenzaSeparataContainer');
        var dataInput = document.getElementById('editDataScadenzaSeparata');
        if (this.checked) {
            container.style.display = 'block';
            dataInput.required = true;
            if (!dataInput.value) {
                dataInput.value = new Date().toISOString().split('T')[0];
            }
        } else {
            container.style.display = 'none';
            dataInput.required = false;
        }
    });

    document.getElementById('modalEdit').addEventListener('show.bs.modal', function(event) {
        var btn = event.relatedTarget;
        var isFattSeparata = btn.getAttribute('data-fattseparata') === 'true';
        
        document.getElementById('editId').value = btn.getAttribute('data-id');
        document.getElementById('editCliente').value = btn.getAttribute('data-cliente');
        document.getElementById('editImporto').value = btn.getAttribute('data-importo').replace('.', ',');
        document.getElementById('editFattSeparata').checked = isFattSeparata;
        
        // Mostra/Nascondi campo data scadenza separata
        var containerSep = document.getElementById('editDataScadenzaSeparataContainer');
        var dataInputSep = document.getElementById('editDataScadenzaSeparata');
        if (isFattSeparata) {
            containerSep.style.display = 'block';
            dataInputSep.required = true;
            dataInputSep.value = btn.getAttribute('data-datascadenza');
        } else {
            containerSep.style.display = 'none';
            dataInputSep.required = false;
        }
    });
</script>
}

