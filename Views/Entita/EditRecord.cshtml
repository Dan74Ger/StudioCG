@model StudioCG.Web.Models.Entita.RecordEntita
@using StudioCG.Web.Models.Entita
@using StudioCG.Web.Services
@{
    var entita = ViewBag.Entita as EntitaDinamica;
    ViewData["Title"] = $"Modifica {entita?.Nome}";
    var valoriCampi = ViewBag.ValoriCampi as Dictionary<int, string?> ?? new Dictionary<int, string?>();
    var clienti = ViewBag.Clienti as List<StudioCG.Web.Models.Cliente> ?? new List<StudioCG.Web.Models.Cliente>();
    var tuttiCampi = entita?.Campi?.ToList() ?? new List<CampoEntita>();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="@entita?.Icon me-2" style="color: @entita?.Colore;"></i>
                Modifica @entita?.Nome
            </h2>
            <small class="text-muted">Record #@Model.Id - Creato il @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
        </div>
        <a asp-action="Dati" asp-route-id="@entita?.Id" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Torna alla Lista
        </a>
    </div>

    <form asp-action="AggiornaRecord" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Informazioni Base</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (entita?.CollegataACliente == true)
                    {
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Cliente</label>
                            <select name="clienteId" class="form-select">
                                <option value="">-- Nessun Cliente --</option>
                                @foreach (var c in clienti)
                                {
                                    if (c.Id == Model.ClienteId) { <option value="@c.Id" selected>@c.RagioneSociale</option> }
                                    else { <option value="@c.Id">@c.RagioneSociale</option> }
                                }
                            </select>
                        </div>
                    }
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Titolo / Riferimento</label>
                        <input type="text" name="titolo" class="form-control" value="@Model.Titolo" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Stato</label>
                        <select name="statoEntitaId" class="form-select">
                            @if (entita?.Stati != null)
                            {
                                foreach (var stato in entita.Stati.OrderBy(s => s.DisplayOrder))
                                {
                                    if (stato.Id == Model.StatoEntitaId) { <option value="@stato.Id" selected>@stato.Nome</option> }
                                    else { <option value="@stato.Id">@stato.Nome</option> }
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>

        @if (entita?.Campi.Any() == true)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-th-list me-2"></i>Campi</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var campo in entita.Campi.OrderBy(c => c.DisplayOrder))
                        {
                            var fieldId = $"campo_{campo.Id}";
                            valoriCampi.TryGetValue(campo.Id, out var valoreCampo);
                            
                            <div class="col-md-@campo.ColWidth mb-3">
                                <label class="form-label">
                                    @campo.Label
                                    @if (campo.IsCalculated)
                                    {
                                        <i class="fas fa-calculator text-warning ms-1" title="Campo calcolato"></i>
                                    }
                                    else if (campo.IsRequired)
                                    {
                                        <span class="text-danger">*</span>
                                    }
                                </label>
                                
                                @if (campo.IsCalculated)
                                {
                                    // Campo calcolato: readonly
                                    var valoreCalcolato = FormulaCalculatorService.CalcolaPerRecordEntita(campo, Model, tuttiCampi);
                                    <input type="text" 
                                           class="form-control calculated-field" 
                                           style="background-color: #fff3cd !important; font-weight: bold;" 
                                           readonly 
                                           disabled
                                           data-campo-id="@campo.Id"
                                           data-formula="@campo.Formula"
                                           value="@(valoreCalcolato ?? "-")"
                                           title="Campo calcolato: @campo.Formula" />
                                }
                                else
                                {
                                    @switch (campo.TipoCampo)
                                    {
                                        case "textarea":
                                            <textarea name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome" rows="3" 
                                                      placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "")>@valoreCampo</textarea>
                                            break;
                                        case "number":
                                            <input type="number" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "decimal":
                                            <input type="number" step="0.01" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "date":
                                            <input type="date" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "datetime":
                                            <input type="datetime-local" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "checkbox":
                                            <div class="form-check">
                                                <input type="checkbox" name="@fieldId" value="true" class="form-check-input source-field" data-campo-name="@campo.Nome"
                                                       @(valoreCampo == "true" ? "checked" : "") />
                                                <label class="form-check-label">@campo.Label</label>
                                            </div>
                                            break;
                                        case "dropdown":
                                            <select name="@fieldId" class="form-select source-field" data-campo-name="@campo.Nome" @(campo.IsRequired ? "required" : "")>
                                                <option value="">-- Seleziona --</option>
                                                @if (!string.IsNullOrEmpty(campo.Options))
                                                {
                                                    foreach (var opt in campo.Options.Split('|'))
                                                    {
                                                        if (opt == valoreCampo) { <option value="@opt" selected>@opt</option> }
                                                        else { <option value="@opt">@opt</option> }
                                                    }
                                                }
                                            </select>
                                            break;
                                        case "email":
                                            <input type="email" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "phone":
                                            <input type="tel" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        case "url":
                                            <input type="url" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                        default:
                                            <input type="text" name="@fieldId" class="form-control source-field" data-campo-name="@campo.Nome"
                                                   value="@valoreCampo" placeholder="@campo.Placeholder" @(campo.IsRequired ? "required" : "") />
                                            break;
                                    }
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Note</label>
                    <textarea name="note" class="form-control" rows="3">@Model.Note</textarea>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Salva Modifiche
            </button>
            <a asp-action="Dati" asp-route-id="@entita?.Id" class="btn btn-outline-secondary">Annulla</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // ========== RICALCOLO CAMPI CALCOLATI IN TEMPO REALE ==========
        
        // Formule dei campi calcolati
        var campiCalcolati = [
            @if (entita?.Campi != null)
            {
                @foreach (var campo in entita.Campi.Where(c => c.IsCalculated && !string.IsNullOrEmpty(c.Formula)))
                {
                    @Html.Raw($"{{ id: {campo.Id}, name: '{campo.Nome}', formula: '{campo.Formula!.Replace("'", "\\'")}' }},")
                }
            }
        ];

        // Funzione per calcolare formula lato client
        function calcolaFormula(formula, valori) {
            try {
                // Sostituisci riferimenti ai campi con i loro valori
                var formulaCalcolata = formula.replace(/\[([^\]]+)\]/g, function(match, nomeCampo) {
                    var valore = valori[nomeCampo.toUpperCase()] || valori[nomeCampo] || 0;
                    // Converti virgola in punto per parsing
                    if (typeof valore === 'string') {
                        valore = valore.replace(',', '.');
                    }
                    var numero = parseFloat(valore);
                    return isNaN(numero) ? 0 : numero;
                });

                // Converti virgole in punti (supporto formato italiano es: 0,88 -> 0.88)
                formulaCalcolata = formulaCalcolata.replace(/,/g, '.');

                // Valida formula (solo numeri, operatori, parentesi)
                if (!/^[\d\.\+\-\*\/\(\)\s]+$/.test(formulaCalcolata)) {
                    return null;
                }

                // Calcola
                var risultato = eval(formulaCalcolata);
                
                // Formatta con 2 decimali e formato italiano
                return risultato.toLocaleString('it-IT', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            } catch (e) {
                console.error('Errore calcolo formula:', e);
                return null;
            }
        }

        // Ricalcola tutti i campi calcolati
        function ricalcolaCampiCalcolati() {
            if (campiCalcolati.length === 0) return;
            
            // Raccogli valori di tutti i campi sorgente
            var valori = {};
            document.querySelectorAll('.source-field').forEach(function(input) {
                var nomeCampo = input.getAttribute('data-campo-name');
                if (nomeCampo) {
                    var valore = input.type === 'checkbox' ? (input.checked ? '1' : '0') : input.value;
                    valori[nomeCampo] = valore;
                    valori[nomeCampo.toUpperCase()] = valore;
                }
            });
            
            // Ricalcola ogni campo calcolato
            campiCalcolati.forEach(function(campoCalc) {
                var input = document.querySelector('.calculated-field[data-campo-id="' + campoCalc.id + '"]');
                if (input) {
                    var risultato = calcolaFormula(campoCalc.formula, valori);
                    input.value = risultato || '-';
                }
            });
        }

        // Aggiungi evento a tutti i campi sorgente
        document.querySelectorAll('.source-field').forEach(function(campo) {
            campo.addEventListener('input', ricalcolaCampiCalcolati);
            campo.addEventListener('change', ricalcolaCampiCalcolati);
        });

        // Calcola al caricamento della pagina
        document.addEventListener('DOMContentLoaded', ricalcolaCampiCalcolati);
        
        // Calcola anche immediatamente
        ricalcolaCampiCalcolati();
    </script>
}
