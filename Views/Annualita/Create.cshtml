@model StudioCG.Web.Models.AnnualitaFiscale

@{
    ViewData["Title"] = "Nuova Annualità";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-calendar-plus me-2"></i>Nuova Annualità Fiscale</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Anno" class="form-label"></label>
                    <input asp-for="Anno" class="form-control" type="number" min="2000" max="2100" />
                    <span asp-validation-for="Anno" class="text-danger"></span>
                </div>
                <div class="col-md-8 mb-3">
                    <label asp-for="Descrizione" class="form-label"></label>
                    <input asp-for="Descrizione" class="form-control" placeholder="Es. Anno Fiscale 2026" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="IsCurrent" class="form-check-input" />
                        <label asp-for="IsCurrent" class="form-check-label"></label>
                        <small class="form-text text-muted d-block">Se attivato, questo diventerà l'anno di lavoro corrente.</small>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Annulla
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Salva
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

