@model StudioCG.Web.Models.AnnualitaFiscale

@{
    ViewData["Title"] = $"Elimina Anno {Model.Anno}";
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Conferma Eliminazione</h5>
    </div>
    <div class="card-body">
        <p class="lead">Sei sicuro di voler eliminare l'anno fiscale <strong>@Model.Anno</strong>?</p>
        
        @if (Model.AttivitaAnnuali.Any())
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Attenzione:</strong> Questo anno ha <strong>@Model.AttivitaAnnuali.Count</strong> attività associate che verranno eliminate.
            </div>
        }

        <dl class="row">
            <dt class="col-sm-3">Anno</dt>
            <dd class="col-sm-9">@Model.Anno</dd>

            <dt class="col-sm-3">Descrizione</dt>
            <dd class="col-sm-9">@Model.Descrizione</dd>

            <dt class="col-sm-3">Attività</dt>
            <dd class="col-sm-9">@Model.AttivitaAnnuali.Count</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Annulla
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>Elimina Definitivamente
                </button>
            </div>
        </form>
    </div>
</div>

