@model StudioCG.Web.Models.AnnualitaFiscale
@using StudioCG.Web.Models

@{
    ViewData["Title"] = $"Copia Attività per Anno {Model.Anno}";
    var annoPrecedente = ViewBag.AnnoPrecedente as AnnualitaFiscale;
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-copy me-2"></i>Copia Attività da Anno Precedente</h5>
    </div>
    <div class="card-body">
        @if (annoPrecedente == null)
        {
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-circle me-2"></i>
                Nessun anno precedente trovato da cui copiare le attività.
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Torna all'elenco
            </a>
        }
        else
        {
            <div class="row mb-4">
                <div class="col-md-5">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h6 class="text-muted">DA</h6>
                            <h3>@annoPrecedente.Anno</h3>
                            <p class="mb-0"><span class="badge bg-info">@annoPrecedente.AttivitaAnnuali.Count attività</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    <i class="fas fa-arrow-right fa-2x text-primary"></i>
                </div>
                <div class="col-md-5">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h6 class="opacity-75">A</h6>
                            <h3>@Model.Anno</h3>
                            <p class="mb-0"><span class="badge bg-light text-dark">@Model.AttivitaAnnuali.Count attività</span></p>
                        </div>
                    </div>
                </div>
            </div>

            @if (annoPrecedente.AttivitaAnnuali.Any())
            {
                <h6>Attività che verranno copiate:</h6>
                <ul class="list-group mb-4">
                    @foreach (var attivita in annoPrecedente.AttivitaAnnuali)
                    {
                        var esisteGia = Model.AttivitaAnnuali.Any(aa => aa.AttivitaTipoId == attivita.AttivitaTipoId);
                        <li class="list-group-item d-flex justify-content-between align-items-center @(esisteGia ? "list-group-item-secondary" : "")">
                            <span>
                                <i class="@attivita.AttivitaTipo?.Icon me-2"></i>
                                @attivita.AttivitaTipo?.Nome
                            </span>
                            @if (esisteGia)
                            {
                                <span class="badge bg-warning">Già presente</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Da copiare</span>
                            }
                        </li>
                    }
                </ul>

                <form asp-action="CopiaAttivitaConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <i class="fas fa-cog me-1"></i>Opzioni di copia
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="copiaClienti" name="copiaClienti" value="true" checked 
                                       style="border: 3px solid #333;" />
                                <label class="form-check-label" for="copiaClienti">
                                    <strong><i class="fas fa-users me-1"></i>Copia abbinamenti cliente-attività</strong>
                                    <small class="d-block text-muted">I clienti che avevano queste attività nell'anno precedente le avranno anche per questo anno</small>
                                </label>
                            </div>
                            
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="copiaDati" name="copiaDati" value="true"
                                       style="border: 3px solid #333;" onchange="toggleOpzioniDati(this.checked)" />
                                <label class="form-check-label" for="copiaDati">
                                    <strong><i class="fas fa-database me-1"></i>Copia anche i dati inseriti</strong>
                                    <small class="d-block text-muted">Tutti i valori dei campi verranno copiati (es: date, note, importi)</small>
                                </label>
                            </div>
                            
                            <div id="opzioniDati" style="display: none;" class="ms-4 p-3 bg-light rounded">
                                <p class="small mb-2"><i class="fas fa-info-circle me-1"></i>Per ogni attività puoi scegliere i campi da copiare nella pagina specifica dell'attività.</p>
                                
                                @foreach (var attivita in annoPrecedente.AttivitaAnnuali.Where(a => a.AttivitaTipo?.Campi?.Any() == true))
                                {
                                    var campiAttivita = attivita.AttivitaTipo?.Campi?.OrderBy(c => c.DisplayOrder).ToList();
                                    if (campiAttivita != null && campiAttivita.Any())
                                    {
                                        <div class="mb-2">
                                            <strong class="small"><i class="@attivita.AttivitaTipo?.Icon me-1"></i>@attivita.AttivitaTipo?.Nome:</strong>
                                            <div class="border rounded p-2 mt-1 bg-white" style="max-height: 120px; overflow-y: auto;">
                                                @foreach (var campo in campiAttivita)
                                                {
                                                    <div class="form-check form-check-inline">
                                                        <input type="checkbox" name="campiDaCopiare_@attivita.AttivitaTipoId" value="@campo.Id" 
                                                               class="form-check-input campo-copia-att-@attivita.AttivitaTipoId" 
                                                               id="copiaC@(attivita.AttivitaTipoId)x@(campo.Id)" checked
                                                               style="border: 2px solid #666;">
                                                        <label class="form-check-label small" for="copiaC@(attivita.AttivitaTipoId)x@(campo.Id)">
                                                            @campo.Label
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                                
                                <small class="text-muted">
                                    <i class="fas fa-exclamation-triangle me-1"></i>I dati già presenti nell'anno destinazione NON saranno sovrascritti.
                                </small>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Annulla
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-copy me-1"></i>Copia Attività
                        </button>
                    </div>
                </form>
                
                <script>
                function toggleOpzioniDati(mostra) {
                    document.getElementById('opzioniDati').style.display = mostra ? 'block' : 'none';
                }
                </script>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    L'anno @annoPrecedente.Anno non ha attività da copiare.
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Torna all'elenco
                </a>
            }
        }
    </div>
</div>

