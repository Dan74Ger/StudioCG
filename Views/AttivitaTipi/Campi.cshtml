@model StudioCG.Web.Models.AttivitaTipo
@using StudioCG.Web.Models

@{
    ViewData["Title"] = $"Campi - {Model.Nome}";
    var altriTipi = ViewBag.AltriTipi as List<AttivitaTipo> ?? new List<AttivitaTipo>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">
            <i class="@Model.Icon me-2"></i>@Model.Nome
        </h4>
        <p class="text-muted mb-0">Gestione campi del tipo attività</p>
    </div>
    <div>
        @if (altriTipi.Any())
        {
            <button type="button" class="btn btn-info me-2" data-bs-toggle="modal" data-bs-target="#duplicaCampiModal">
                <i class="fas fa-copy me-1"></i>Duplica da...
            </button>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Torna all'elenco
        </a>
    </div>
</div>

<div class="row">
    <!-- Lista Campi -->
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list me-2"></i>Campi Configurati (@Model.Campi.Count)</h6>
            </div>
            <div class="card-body p-0">
                @if (!Model.Campi.Any())
                {
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                        <p>Nessun campo configurato.<br>Usa il form a destra per aggiungere campi.</p>
                    </div>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var campo in Model.Campi)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@campo.Label</strong>
                                    <code class="ms-2 text-muted small">[@campo.Name]</code>
                                    @if (campo.IsCalculated)
                                    {
                                        <span class="badge bg-warning text-dark ms-2" title="Formula: @campo.Formula">
                                            <i class="fas fa-calculator me-1"></i>Calcolato
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary ms-2">
                                            @switch (campo.FieldType)
                                            {
                                                case AttivitaFieldType.Text: @:Testo
                                                    break;
                                                case AttivitaFieldType.LongText: @:Testo Lungo
                                                    break;
                                                case AttivitaFieldType.Number: @:Numero
                                                    break;
                                                case AttivitaFieldType.Decimal: @:Decimale
                                                    break;
                                                case AttivitaFieldType.Date: @:Data
                                                    break;
                                                case AttivitaFieldType.Boolean: @:Sì/No
                                                    break;
                                            }
                                        </span>
                                    }
                                    @if (campo.IsRequired)
                                    {
                                        <span class="badge bg-danger ms-1">Obbligatorio</span>
                                    }
                                    @if (campo.ShowInList)
                                    {
                                        <span class="badge bg-info ms-1">In Lista</span>
                                    }
                                    @if (campo.IsCalculated && !string.IsNullOrEmpty(campo.Formula))
                                    {
                                        <br><small class="text-muted"><code>@campo.Formula</code></small>
                                    }
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" class="btn btn-outline-primary" title="Modifica" data-bs-toggle="modal" data-bs-target="#editCampoModal-@campo.Id">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <form asp-action="MoveCampoUp" asp-route-id="@campo.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-secondary" title="Sposta su">
                                            <i class="fas fa-arrow-up"></i>
                                        </button>
                                    </form>
                                    <form asp-action="MoveCampoDown" asp-route-id="@campo.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-secondary" title="Sposta giù">
                                            <i class="fas fa-arrow-down"></i>
                                        </button>
                                    </form>
                                    <form asp-action="DeleteCampo" asp-route-id="@campo.Id" method="post" class="d-inline" onsubmit="return confirm('Eliminare questo campo?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Elimina">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <!-- Form Aggiungi Campo -->
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Aggiungi Campo</h6>
            </div>
            <div class="card-body">
                <form asp-action="AddCampo" method="post">
                    <input type="hidden" name="AttivitaTipoId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Etichetta *</label>
                        <input type="text" name="Label" class="form-control" required placeholder="Es. Data Scadenza" />
                    </div>

                    <div class="row mb-3">
                        <div class="col-8">
                            <label class="form-label">Tipo Campo</label>
                            <select name="FieldType" class="form-select">
                                <option value="@((int)AttivitaFieldType.Text)">Testo</option>
                                <option value="@((int)AttivitaFieldType.LongText)">Testo Lungo</option>
                                <option value="@((int)AttivitaFieldType.Number)">Numero</option>
                                <option value="@((int)AttivitaFieldType.Decimal)">Decimale</option>
                                <option value="@((int)AttivitaFieldType.Date)">Data</option>
                                <option value="@((int)AttivitaFieldType.Boolean)">Sì/No</option>
                            </select>
                        </div>
                        <div class="col-4">
                            <label class="form-label">Larghezza</label>
                            <input type="number" name="ColumnWidth" class="form-control" value="0" min="0" max="500" placeholder="Auto" title="0 = Auto, altrimenti px" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="IsRequired" value="true" id="isRequired" />
                                <label class="form-check-label" for="isRequired">Obbligatorio</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="ShowInList" value="true" id="showInList" checked />
                                <label class="form-check-label" for="showInList">Mostra in lista</label>
                            </div>
                        </div>
                    </div>

                    <!-- Sezione Campo Calcolato -->
                    <div class="card bg-light mb-3">
                        <div class="card-body py-2">
                            <div class="form-check mb-2">
                                <input type="checkbox" class="form-check-input" name="IsCalculated" value="true" id="isCalculated" onchange="toggleFormulaSection()" />
                                <label class="form-check-label" for="isCalculated">
                                    <i class="fas fa-calculator me-1"></i><strong>Campo Calcolato</strong>
                                </label>
                            </div>
                            <div id="formulaSection" style="display: none;">
                                <div class="mb-2">
                                    <label class="form-label small">Formula</label>
                                    <input type="text" name="Formula" id="formulaInput" class="form-control form-control-sm" placeholder="Es: [LIQ4TRIM] * 0.88" />
                                    <small class="text-muted">Usa [NomeCampo] per riferimenti. Operatori: + - * /</small>
                                </div>
                                @if (Model.Campi.Any(c => !c.IsCalculated))
                                {
                                    <div class="mb-0">
                                        <label class="form-label small">Campi disponibili:</label>
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var campoDisp in Model.Campi.Where(c => !c.IsCalculated))
                                            {
                                                <button type="button" class="btn btn-outline-secondary btn-sm py-0" 
                                                        onclick="inserisciCampo('@campoDisp.Name')" title="@campoDisp.Label">
                                                    [@campoDisp.Name]
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-plus me-1"></i>Aggiungi Campo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modali per modifica campi -->
@foreach (var campo in Model.Campi)
{
    <div class="modal fade" id="editCampoModal-@campo.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="UpdateCampo" method="post">
                    <input type="hidden" name="id" value="@campo.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-edit me-2"></i>Modifica Campo</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Etichetta *</label>
                            <input type="text" name="label" class="form-control" required value="@campo.Label" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tipo Campo</label>
                            <select name="fieldType" class="form-select">
                                @{
                                    var fieldTypes = new[] {
                                        (AttivitaFieldType.Text, "Testo"),
                                        (AttivitaFieldType.LongText, "Testo Lungo"),
                                        (AttivitaFieldType.Number, "Numero"),
                                        (AttivitaFieldType.Decimal, "Decimale"),
                                        (AttivitaFieldType.Date, "Data"),
                                        (AttivitaFieldType.Boolean, "Sì/No")
                                    };
                                }
                                @foreach (var (ft, label) in fieldTypes)
                                {
                                    if (campo.FieldType == ft)
                                    {
                                        <option value="@((int)ft)" selected>@label</option>
                                    }
                                    else
                                    {
                                        <option value="@((int)ft)">@label</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row mb-3">
                            <div class="col-4">
                                <label class="form-label small">Larghezza (px)</label>
                                <input type="number" name="columnWidth" class="form-control form-control-sm" value="@campo.ColumnWidth" min="0" max="500" title="0 = Auto" />
                            </div>
                            <div class="col-4">
                                <div class="form-check mt-4">
                                    <input type="checkbox" class="form-check-input" name="isRequired" value="true" id="isRequired-@campo.Id" @(campo.IsRequired ? "checked" : "") />
                                    <label class="form-check-label" for="isRequired-@campo.Id">Obbligatorio</label>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-check mt-4">
                                    <input type="checkbox" class="form-check-input" name="showInList" value="true" id="showInList-@campo.Id" @(campo.ShowInList ? "checked" : "") />
                                    <label class="form-check-label" for="showInList-@campo.Id">In lista</label>
                                </div>
                            </div>
                        </div>

                        <!-- Campo Calcolato -->
                        <div class="card bg-light mb-3">
                            <div class="card-body py-2">
                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" name="isCalculated" value="true" 
                                           id="isCalculated-@campo.Id" @(campo.IsCalculated ? "checked" : "")
                                           onchange="toggleFormulaSectionEdit(@campo.Id)" />
                                    <label class="form-check-label" for="isCalculated-@campo.Id">
                                        <i class="fas fa-calculator me-1"></i><strong>Campo Calcolato</strong>
                                    </label>
                                </div>
                                <div id="formulaSection-@campo.Id" style="display: @(campo.IsCalculated ? "block" : "none");">
                                    <div class="mb-2">
                                        <label class="form-label small">Formula</label>
                                        <input type="text" name="formula" id="formulaInput-@campo.Id" class="form-control form-control-sm" 
                                               value="@campo.Formula" placeholder="Es: [LIQ4TRIM] * 0.88" />
                                        <small class="text-muted">Usa [NomeCampo] per riferimenti. Operatori: + - * /</small>
                                    </div>
                                    @{
                                        var campiDisponibiliEdit = Model.Campi.Where(c => !c.IsCalculated && c.Id != campo.Id).ToList();
                                    }
                                    @if (campiDisponibiliEdit.Any())
                                    {
                                        <div class="mb-0">
                                            <label class="form-label small">Campi disponibili:</label>
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var campoDisp in campiDisponibiliEdit)
                                                {
                                                    <button type="button" class="btn btn-outline-secondary btn-sm py-0" 
                                                            onclick="inserisciCampoEdit('@campo.Id', '@campoDisp.Name')" title="@campoDisp.Label">
                                                        [@campoDisp.Name]
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Attenzione:</strong> Cambiare il tipo di campo potrebbe rendere i dati esistenti non compatibili.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Salva Modifiche</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<!-- Modal Duplica Campi -->
@if (altriTipi.Any())
{
    <div class="modal fade" id="duplicaCampiModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="DuplicaCampiDa" method="post">
                    <input type="hidden" name="destinazioneId" value="@Model.Id" />
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title"><i class="fas fa-copy me-2"></i>Duplica Campi da altra Attività</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Seleziona l'attività da cui copiare i campi:</p>
                        
                        <div class="mb-3">
                            <label class="form-label">Attività Sorgente *</label>
                            <select name="sorgenteId" class="form-select" required>
                                <option value="">-- Seleziona Attività --</option>
                                @foreach (var tipo in altriTipi)
                                {
                                    <option value="@tipo.Id">
                                        @tipo.Nome (@tipo.Campi.Count campi)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Nota:</strong> I campi con lo stesso nome non verranno duplicati.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-info"><i class="fas fa-copy me-1"></i>Duplica Campi</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
<script>
    // Toggle sezione formula nel form nuovo campo
    function toggleFormulaSection() {
        var checkbox = document.getElementById('isCalculated');
        var section = document.getElementById('formulaSection');
        var fieldTypeSelect = document.querySelector('select[name="FieldType"]');
        var isRequiredCheck = document.getElementById('isRequired');
        
        if (checkbox.checked) {
            section.style.display = 'block';
            // Imposta automaticamente tipo Decimale e disabilita
            fieldTypeSelect.value = '@((int)AttivitaFieldType.Decimal)';
            fieldTypeSelect.disabled = true;
            isRequiredCheck.checked = false;
            isRequiredCheck.disabled = true;
        } else {
            section.style.display = 'none';
            fieldTypeSelect.disabled = false;
            isRequiredCheck.disabled = false;
        }
    }

    // Toggle sezione formula nel modal modifica
    function toggleFormulaSectionEdit(campoId) {
        var checkbox = document.getElementById('isCalculated-' + campoId);
        var section = document.getElementById('formulaSection-' + campoId);
        
        if (checkbox.checked) {
            section.style.display = 'block';
        } else {
            section.style.display = 'none';
        }
    }

    // Inserisci riferimento campo nella formula (form nuovo campo)
    function inserisciCampo(nomeCampo) {
        var input = document.getElementById('formulaInput');
        var cursorPos = input.selectionStart;
        var textBefore = input.value.substring(0, cursorPos);
        var textAfter = input.value.substring(cursorPos);
        input.value = textBefore + '[' + nomeCampo + ']' + textAfter;
        input.focus();
        input.selectionStart = input.selectionEnd = cursorPos + nomeCampo.length + 2;
    }

    // Inserisci riferimento campo nella formula (modal modifica)
    function inserisciCampoEdit(campoId, nomeCampo) {
        var input = document.getElementById('formulaInput-' + campoId);
        var cursorPos = input.selectionStart;
        var textBefore = input.value.substring(0, cursorPos);
        var textAfter = input.value.substring(cursorPos);
        input.value = textBefore + '[' + nomeCampo + ']' + textAfter;
        input.focus();
        input.selectionStart = input.selectionEnd = cursorPos + nomeCampo.length + 2;
    }
</script>
}

