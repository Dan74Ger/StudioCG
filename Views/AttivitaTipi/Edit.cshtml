@model StudioCG.Web.Models.AttivitaTipo

@{
    ViewData["Title"] = $"Modifica {Model.Nome}";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Modifica Tipo Attivit√†</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div class="row">
                <div class="col-md-8 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="Icon" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="@Model.Icon"></i></span>
                        <input asp-for="Icon" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descrizione" class="form-label"></label>
                <textarea asp-for="Descrizione" class="form-control" rows="2"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" type="number" min="0" />
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-check mt-4">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Annulla
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Salva Modifiche
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

