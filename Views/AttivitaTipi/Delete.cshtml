@model StudioCG.Web.Models.AttivitaTipo

@{
    ViewData["Title"] = $"Elimina {Model.Nome}";
    var totaleClientiAssegnati = ViewBag.TotaleClientiAssegnati as int? ?? 0;
}

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Conferma Eliminazione</h5>
    </div>
    <div class="card-body">
        <p class="lead">Sei sicuro di voler eliminare il tipo di attività <strong>@Model.Nome</strong>?</p>
        
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>
            <strong>Attenzione:</strong> Questa azione eliminerà DEFINITIVAMENTE:
            <ul class="mb-0 mt-2">
                <li><strong>@Model.Campi.Count</strong> campi configurati</li>
                <li><strong>@Model.Stati.Count</strong> stati configurati</li>
                <li><strong>@Model.AttivitaAnnuali.Count</strong> abbinamenti con anni fiscali</li>
                <li><strong>@totaleClientiAssegnati</strong> assegnazioni clienti-attività (tutti i dati persi!)</li>
            </ul>
        </div>

        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Descrizione</dt>
            <dd class="col-sm-9">@Model.Descrizione</dd>

            <dt class="col-sm-3">Icona</dt>
            <dd class="col-sm-9"><i class="@Model.Icon"></i></dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Annulla
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>Elimina Definitivamente
                </button>
            </div>
        </form>
    </div>
</div>

