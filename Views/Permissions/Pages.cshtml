@model IEnumerable<StudioCG.Web.Models.Permission>
@{
    ViewData["Title"] = "Gestione Pagine";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Pagine del Sistema</h5>
            <small class="text-muted">Gestisci le pagine/sezioni disponibili nel sistema</small>
        </div>
        <a asp-action="CreatePage" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nuova Pagina
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width: 50px;">Ordine</th>
                        <th>Nome Pagina</th>
                        <th>URL</th>
                        <th>Categoria</th>
                        <th class="text-center">Nel Menu</th>
                        <th class="text-end" style="width: 150px;">Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pg in Model)
                    {
                        var isDynamicPage = pg.PageUrl.StartsWith("/DynamicData/");
                        <tr>
                            <td class="text-center">
                                <span class="badge bg-secondary">@pg.DisplayOrder</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(pg.Icon))
                                    {
                                        <i class="@pg.Icon me-2 text-primary"></i>
                                    }
                                    <strong>@pg.PageName</strong>
                                    @if (isDynamicPage)
                                    {
                                        <span class="badge bg-info ms-2" title="Pagina Dinamica">
                                            <i class="fas fa-magic"></i>
                                        </span>
                                    }
                                </div>
                            </td>
                            <td><code>@pg.PageUrl</code></td>
                            <td>
                                @if (!string.IsNullOrEmpty(pg.Category))
                                {
                                    <span class="badge bg-primary">@pg.Category</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (pg.ShowInMenu)
                                {
                                    <span class="badge bg-success">SÃ¬</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a asp-action="EditPage" asp-route-id="@pg.Id" class="btn btn-sm btn-outline-primary" title="Modifica">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (!isDynamicPage)
                                    {
                                        <form asp-action="DeletePage" asp-route-id="@pg.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Sei sicuro di voler eliminare questa pagina?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Elimina">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
