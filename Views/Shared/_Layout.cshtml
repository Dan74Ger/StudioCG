    <script>
        (function () {
            const KEY = 'studiocg_sidebar_collapsed';
            const body = document.body;
            const logoToggle = document.getElementById('sidebarLogoToggle');

            // Restore stato salvato
            try {
                const saved = localStorage.getItem(KEY);
                if (saved === '1') body.classList.add('sidebar-collapsed');
            } catch { }

            // Toggle al click sul logo
            if (logoToggle) {
                logoToggle.addEventListener('click', function () {
                    body.classList.toggle('sidebar-collapsed');
                    try {
                        localStorage.setItem(KEY, body.classList.contains('sidebar-collapsed') ? '1' : '0');
                    } catch { }
                });
            }
            
            // Aggiungi data-tooltip dinamicamente ai nav-link
            document.querySelectorAll('.sidebar-nav .nav-link').forEach(function(link) {
                // Prendi il testo dalla span o section-title
                var textEl = link.querySelector('span, .section-title');
                if (textEl) {
                    link.setAttribute('data-tooltip', textEl.textContent.trim());
                }
            });
        })();
    </script>
