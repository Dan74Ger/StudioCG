@model StudioCG.Web.Models.DynamicPage
@{
    ViewData["Title"] = "Modifica Pagina";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Modifica Pagina</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="TableName" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="DatiGenerali">ðŸ“‚ DATI Generali</option>
                            <option value="DatiRiservati">ðŸ”’ DATI Riservati</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Icon" class="form-label"></label>
                            <input asp-for="Icon" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DisplayOrder" class="form-label"></label>
                            <input asp-for="DisplayOrder" class="form-control" type="number" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Salva
                        </button>
                        <a asp-action="Fields" asp-route-id="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-list me-2"></i>Gestisci Campi
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Indietro
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

