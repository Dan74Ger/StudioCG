@model IEnumerable<StudioCG.Web.Models.DynamicPage>
@{
    ViewData["Title"] = "Gestione Pagine Dinamiche";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Pagine Dinamiche</h5>
            <small class="text-muted">Crea e gestisci le pagine personalizzate</small>
        </div>
        <div class="btn-group">
            <div class="dropdown me-2">
                <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-file-excel me-1"></i>Export Excel
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" asp-action="ExportExcel" asp-route-categoria="DatiRiservati">
                            <i class="fas fa-lock text-danger me-2"></i>Dati Riservati
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" asp-action="ExportExcel" asp-route-categoria="DatiGenerali">
                            <i class="fas fa-folder-open text-info me-2"></i>Dati Generali
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" asp-action="ExportExcel" asp-route-categoria="Tutti">
                            <i class="fas fa-database text-primary me-2"></i>Tutti i Dati
                        </a>
                    </li>
                </ul>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nuova Pagina
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open text-muted mb-3" style="font-size: 3rem;"></i>
                <p class="text-muted">Nessuna pagina creata. Clicca "Nuova Pagina" per iniziare.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Pagina</th>
                            <th>Categoria</th>
                            <th class="text-center">Campi</th>
                            <th class="text-center">Stato</th>
                            <th class="text-end" style="width: 200px;">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pg in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="@pg.Icon me-2 text-primary"></i>
                                        <div>
                                            <strong>@pg.Name</strong>
                                            @if (!string.IsNullOrEmpty(pg.Description))
                                            {
                                                <br /><small class="text-muted">@pg.Description</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (pg.Category == "DatiRiservati")
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-lock me-1"></i>Dati Riservati</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info"><i class="fas fa-folder-open me-1"></i>Dati Generali</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@pg.Fields.Count campi</span>
                                </td>
                                <td class="text-center">
                                    @if (pg.IsActive)
                                    {
                                        <span class="badge bg-success">Attiva</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Inattiva</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Fields" asp-route-id="@pg.Id" class="btn btn-sm btn-outline-success" title="Gestisci Campi">
                                            <i class="fas fa-list"></i>
                                        </a>
                                        <a asp-controller="DynamicData" asp-action="Page" asp-route-id="@pg.Id" class="btn btn-sm btn-outline-info" title="Visualizza Dati">
                                            <i class="fas fa-table"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@pg.Id" class="btn btn-sm btn-outline-primary" title="Modifica">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@pg.Id" class="btn btn-sm btn-outline-danger" title="Elimina">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
