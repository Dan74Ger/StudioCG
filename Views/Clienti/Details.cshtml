@model StudioCG.Web.Models.Cliente
@using StudioCG.Web.Models
@using StudioCG.Web.Models.Entita
@using StudioCG.Web.Models.AttivitaPeriodiche

@{
    ViewData["Title"] = Model.RagioneSociale;
    var attivitaDisponibili = ViewBag.AttivitaDisponibili as List<AttivitaAnnuale> ?? new List<AttivitaAnnuale>();
    var annoCorrente = ViewBag.AnnoCorrente as AnnualitaFiscale;
    var tuttiAnni = ViewBag.TuttiAnni as List<AnnualitaFiscale> ?? new List<AnnualitaFiscale>();
    var annoSelezionato = ViewBag.AnnoSelezionato as int? ?? annoCorrente?.Id;
    
    var legaliRappresentanti = Model.Soggetti.Where(s => s.TipoSoggetto == TipoSoggetto.LegaleRappresentante).ToList();
    var consiglieri = Model.Soggetti.Where(s => s.TipoSoggetto == TipoSoggetto.Consigliere).ToList();
    var soci = Model.Soggetti.Where(s => s.TipoSoggetto == TipoSoggetto.Socio).ToList();
    
    var entitaCollegate = ViewBag.EntitaCollegate as List<EntitaDinamica> ?? new List<EntitaDinamica>();
    var recordsPerEntita = ViewBag.RecordsPerEntita as Dictionary<int, int> ?? new Dictionary<int, int>();
    
    // Attività Periodiche (LIPE, ecc.)
    var attivitaPeriodiche = ViewBag.AttivitaPeriodiche as dynamic ?? new List<dynamic>();
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h4 class="mb-1">@Model.RagioneSociale</h4>
        <p class="text-muted mb-0">
            @if (!string.IsNullOrEmpty(Model.PartitaIVA))
            {
                <span class="me-3"><i class="fas fa-id-card me-1"></i>P.IVA: <code>@Model.PartitaIVA</code></span>
            }
            @if (!string.IsNullOrEmpty(Model.CodiceFiscale))
            {
                <span><i class="fas fa-fingerprint me-1"></i>C.F.: <code>@Model.CodiceFiscale</code></span>
            }
        </p>
    </div>
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="fas fa-edit me-1"></i>Modifica
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
            <i class="fas fa-trash me-1"></i>Elimina
        </a>
    </div>
</div>

<div class="row">
    <!-- Colonna Sinistra: Dati Cliente -->
    <div class="col-lg-3">
        <!-- Dati Anagrafici -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Dati Anagrafici</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Indirizzo))
                {
                    <p class="mb-2">
                        <i class="fas fa-map-marker-alt text-muted me-2"></i>
                        @Model.Indirizzo<br>
                        <span class="ms-4">@Model.CAP @Model.Citta @(!string.IsNullOrEmpty(Model.Provincia) ? $"({Model.Provincia})" : "")</span>
                    </p>
                }
                @if (!string.IsNullOrEmpty(Model.Email))
                {
                    <p class="mb-2"><i class="fas fa-envelope text-muted me-2"></i><a href="mailto:@Model.Email">@Model.Email</a></p>
                }
                @if (!string.IsNullOrEmpty(Model.PEC))
                {
                    <p class="mb-2"><i class="fas fa-envelope-open-text text-muted me-2"></i><a href="mailto:@Model.PEC">@Model.PEC</a></p>
                }
                @if (!string.IsNullOrEmpty(Model.Telefono))
                {
                    <p class="mb-2"><i class="fas fa-phone text-muted me-2"></i>@Model.Telefono</p>
                }
                @if (!string.IsNullOrEmpty(Model.CodiceAteco))
                {
                    <p class="mb-2"><i class="fas fa-industry text-muted me-2"></i>Cod. Ateco: <code>@Model.CodiceAteco</code></p>
                }
                @if (!string.IsNullOrEmpty(Model.TipoSoggetto))
                {
                    <p class="mb-2"><i class="fas fa-user-tag text-muted me-2"></i>Tipo: <code>@Model.TipoSoggetto</code></p>
                }
                @if (!string.IsNullOrEmpty(Model.Note))
                {
                    <hr>
                    <p class="mb-0 small text-muted">@Model.Note</p>
                }
            </div>
        </div>

        @{
            var campiCustom = ViewBag.CampiCustom as IEnumerable<CampoCustomCliente>;
            var valoriCustom = ViewBag.ValoriCampiCustom as Dictionary<int, string?> ?? new Dictionary<int, string?>();
        }
        @if (campiCustom != null && campiCustom.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-th-list me-2"></i>Campi Personalizzati</h6>
                </div>
                <div class="card-body">
                    @foreach (var campo in campiCustom)
                    {
                        var valore = valoriCustom.ContainsKey(campo.Id) ? valoriCustom[campo.Id] : null;
                        @if (!string.IsNullOrEmpty(valore))
                        {
                            <p class="mb-2">
                                <strong class="text-muted">@campo.Label:</strong>
                                @if (campo.TipoCampo == "checkbox")
                                {
                                    if (valore == "true")
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i> Sì</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="fas fa-times"></i> No</span>
                                    }
                                }
                                else if (campo.TipoCampo == "url" && !string.IsNullOrEmpty(valore))
                                {
                                    <a href="@valore" target="_blank">@valore</a>
                                }
                                else if (campo.TipoCampo == "email" && !string.IsNullOrEmpty(valore))
                                {
                                    <a href="mailto:@valore">@valore</a>
                                }
                                else
                                {
                                    @valore
                                }
                            </p>
                        }
                    }
                    @if (!valoriCustom.Any(v => !string.IsNullOrEmpty(v.Value)))
                    {
                        <p class="text-muted small mb-0">Nessun valore inserito</p>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Colonna Centrale: Soggetti -->
    <div class="col-lg-3">
        <!-- Legale Rappresentante -->
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center py-2">
                <h6 class="mb-0"><i class="fas fa-user-tie me-2"></i>Legale Rappresentante</h6>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addSoggettoModal" data-tipo="0">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <ul class="list-group list-group-flush">
                @if (!legaliRappresentanti.Any())
                {
                    <li class="list-group-item text-muted small">Nessun legale rappresentante</li>
                }
                @foreach (var lr in legaliRappresentanti)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@lr.NomeCompleto</strong>
                            @if (!string.IsNullOrEmpty(lr.CodiceFiscale))
                            {
                                <br><small class="text-muted">C.F.: @lr.CodiceFiscale</small>
                            }
                        </div>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="EditSoggetto" asp-route-id="@lr.Id" class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit"></i></a>
                            <form asp-action="DeleteSoggetto" asp-route-id="@lr.Id" method="post" class="d-inline" onsubmit="return confirm('Eliminare questo soggetto?')">
                                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-times"></i></button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Consiglieri -->
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center py-2">
                <h6 class="mb-0"><i class="fas fa-users me-2"></i>Consiglieri (@consiglieri.Count)</h6>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addSoggettoModal" data-tipo="1">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <ul class="list-group list-group-flush" style="max-height: 200px; overflow-y: auto;">
                @if (!consiglieri.Any())
                {
                    <li class="list-group-item text-muted small">Nessun consigliere</li>
                }
                @foreach (var c in consiglieri)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                        <span>@c.NomeCompleto</span>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="EditSoggetto" asp-route-id="@c.Id" class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit"></i></a>
                            <form asp-action="DeleteSoggetto" asp-route-id="@c.Id" method="post" class="d-inline" onsubmit="return confirm('Eliminare questo soggetto?')">
                                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-times"></i></button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <!-- Soci -->
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center py-2">
                <h6 class="mb-0"><i class="fas fa-handshake me-2"></i>Soci (@soci.Count)</h6>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addSoggettoModal" data-tipo="2">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <ul class="list-group list-group-flush" style="max-height: 250px; overflow-y: auto;">
                @if (!soci.Any())
                {
                    <li class="list-group-item text-muted small">Nessun socio</li>
                }
                @foreach (var s in soci)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                        <div>
                            <span>@s.NomeCompleto</span>
                            @if (s.QuotaPercentuale.HasValue)
                            {
                                <span class="badge bg-info ms-2">@s.QuotaPercentuale.Value.ToString("0.##")%</span>
                            }
                        </div>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="EditSoggetto" asp-route-id="@s.Id" class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit"></i></a>
                            <form asp-action="DeleteSoggetto" asp-route-id="@s.Id" method="post" class="d-inline" onsubmit="return confirm('Eliminare questo soggetto?')">
                                <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-times"></i></button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
            @if (soci.Any())
            {
                var totaleQuote = soci.Sum(s => s.QuotaPercentuale ?? 0);
                <div class="card-footer py-2">
                    <small class="text-muted">Totale quote: <strong class="@(totaleQuote == 100 ? "text-success" : "text-warning")">@totaleQuote.ToString("0.##")%</strong></small>
                </div>
            }
        </div>
    </div>

    <!-- Colonna Attività -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">
                    <i class="fas fa-tasks me-2"></i>Attività
                    @if (annoCorrente != null)
                    {
                        <span class="badge bg-primary ms-2">@annoCorrente.Anno</span>
                    }
                </h6>
                @if (tuttiAnni.Count > 1)
                {
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-calendar-alt"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @foreach (var anno in tuttiAnni)
                            {
                                <li>
                                    <a class="dropdown-item @(anno.Id == annoSelezionato ? "active" : "")" 
                                       asp-action="Details" asp-route-id="@Model.Id" asp-route-annoId="@anno.Id">
                                        @anno.Anno
                                        @if (anno.IsCurrent)
                                        {
                                            <span class="badge bg-success ms-1">Corrente</span>
                                        }
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <div class="card-body p-0">
                @if (annoCorrente == null)
                {
                    <div class="p-3 text-muted small">Nessun anno fiscale configurato.</div>
                }
                else if (!attivitaDisponibili.Any())
                {
                    <div class="p-3 text-muted small">Nessuna attività disponibile per quest'anno.</div>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var attivita in attivitaDisponibili)
                        {
                            var clienteAttivita = Model.Attivita.FirstOrDefault(ca => ca.AttivitaAnnualeId == attivita.Id);
                            var isAssegnata = clienteAttivita != null;
                            
                            <li class="list-group-item @(isAssegnata ? "bg-light" : "")">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <form asp-action="ToggleAttivita" method="post" class="d-inline">
                                            <input type="hidden" name="clienteId" value="@Model.Id" />
                                            <input type="hidden" name="attivitaAnnualeId" value="@attivita.Id" />
                                            <input type="hidden" name="assegna" value="@(isAssegnata ? "false" : "true")" />
                                            <input type="hidden" name="annoId" value="@annoCorrente?.Id" />
                                            <input type="checkbox" class="form-check-input" @(isAssegnata ? "checked" : "") 
                                                   onchange="this.form.submit()" />
                                            <label class="form-check-label ms-1 @(isAssegnata ? "fw-bold" : "")">
                                                <i class="@attivita.AttivitaTipo?.Icon me-1"></i>
                                                @attivita.AttivitaTipo?.Nome
                                            </label>
                                        </form>
                                    </div>
                                    @if (isAssegnata)
                                    {
                                        <div>
                                            @if (clienteAttivita!.StatoAttivitaTipoNav != null)
                                            {
                                                <span class="badge px-2 py-1" style="background-color: @clienteAttivita.StatoAttivitaTipoNav.ColoreSfondo; color: @clienteAttivita.StatoAttivitaTipoNav.ColoreTesto;">
                                                    <i class="@clienteAttivita.StatoAttivitaTipoNav.Icon me-1"></i>@clienteAttivita.StatoAttivitaTipoNav.Nome
                                                </span>
                                            }
                                            else
                                            {
                                                @* Fallback per retrocompatibilità *@
                                                @switch (clienteAttivita.Stato)
                                                {
                                                    case StatoAttivita.DaFare:
                                                        <span class="badge bg-secondary">Da Fare</span>
                                                        break;
                                                    case StatoAttivita.Completata:
                                                        <span class="badge bg-warning text-dark">Completata</span>
                                                        break;
                                                    case StatoAttivita.DaInviareEntratel:
                                                        <span class="badge text-white" style="background-color: #fd7e14;">Da inviare</span>
                                                        break;
                                                    case StatoAttivita.DRInviate:
                                                        <span class="badge bg-success">DR Inviate</span>
                                                        break;
                                                    case StatoAttivita.Sospesa:
                                                        <span class="badge bg-danger">Sospesa</span>
                                                        break;
                                                }
                                            }
                                            <a asp-controller="Attivita" asp-action="ClienteAttivita" asp-route-id="@clienteAttivita.Id" 
                                               class="btn btn-sm btn-outline-primary ms-1" title="Gestisci">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <!-- Colonna Entità -->
    <div class="col-lg-3">
        @if (entitaCollegate.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-cube me-2"></i>Entità</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var entita in entitaCollegate)
                        {
                            var count = recordsPerEntita.ContainsKey(entita.Id) ? recordsPerEntita[entita.Id] : 0;
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-controller="Entita" asp-action="Dati" asp-route-id="@entita.Id" asp-route-clienteId="@Model.Id"
                                   class="text-decoration-none" style="color: @entita.Colore;">
                                    <i class="@entita.Icon me-2"></i>@entita.NomePluruale
                                </a>
                                <div>
                                    @if (count > 0)
                                    {
                                        <span class="badge bg-primary rounded-pill me-1">@count</span>
                                    }
                                    <a asp-controller="Entita" asp-action="NuovoRecord" asp-route-id="@entita.Id" asp-route-clienteId="@Model.Id"
                                       class="btn btn-sm btn-outline-success" title="Nuovo @entita.Nome">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a asp-controller="Entita" asp-action="Dati" asp-route-id="@entita.Id" asp-route-clienteId="@Model.Id"
                                       class="btn btn-sm btn-outline-primary" title="Visualizza">
                                        <i class="fas fa-list"></i>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-cube me-2"></i>Entità</h6>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-0">
                        Nessuna entità collegata a clienti.
                        <a asp-controller="Entita" asp-action="Gestione" class="text-primary">Crea un'entità</a>
                    </p>
                </div>
            </div>
        }
        
        <!-- Attività Periodiche (LIPE, ecc.) -->
        @{
            var tutteAttivitaPeriodiche = ViewBag.TutteAttivitaPeriodiche as List<AttivitaPeriodica> ?? new List<AttivitaPeriodica>();
            var tipiPeriodoAssegnati = ViewBag.TipiPeriodoAssegnati as HashSet<int> ?? new HashSet<int>();
        }
        <div class="card mt-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Attività Periodiche</h6>
                @if (tutteAttivitaPeriodiche.Any())
                {
                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#assegnaAttivitaPeriodicaModal">
                        <i class="fas fa-plus"></i>
                    </button>
                }
            </div>
            <div class="card-body p-0">
                @if (((IEnumerable<dynamic>)attivitaPeriodiche).Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var item in (IEnumerable<dynamic>)attivitaPeriodiche)
                        {
                            var attivita = item.Attivita as AttivitaPeriodica;
                            var tipiPeriodo = item.TipiPeriodo as IEnumerable<TipoPeriodo>;
                            var clienteAttivitaIds = item.ClienteAttivitaIds as Dictionary<int, int>;
                            
                            @if (attivita != null && tipiPeriodo != null)
                            {
                                <li class="list-group-item p-0">
                                    <a asp-controller="AttivitaPeriodiche" asp-action="Dati" 
                                       asp-route-id="@attivita.Id"
                                       class="fw-bold d-flex justify-content-between align-items-center text-decoration-none p-3"
                                       style="color: @attivita.Colore; background-color: #f8f9fa;"
                                       title="Vai a @attivita.Nome"
                                       onmouseover="this.style.backgroundColor='#e7f1ff'" 
                                       onmouseout="this.style.backgroundColor='#f8f9fa'">
                                        <span>
                                            <i class="@attivita.Icona me-2"></i>@attivita.Nome
                                        </span>
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <div class="px-3 pb-2">
                                    @foreach (var tipo in tipiPeriodo)
                                    {
                                        @if (tipo != null)
                                        {
                                            <a asp-controller="AttivitaPeriodiche" asp-action="Dati" 
                                               asp-route-id="@attivita.Id" 
                                               asp-route-tipoPeriodoId="@tipo.Id"
                                               asp-route-clienteId="@Model.Id"
                                               class="d-flex justify-content-between align-items-center mb-1 text-decoration-none p-2 rounded"
                                               style="color: @tipo.Colore; transition: background 0.2s;"
                                               title="Vai a @attivita.Nome - @tipo.Nome"
                                               onmouseover="this.style.backgroundColor='#e7f1ff'" 
                                               onmouseout="this.style.backgroundColor=''">
                                                <span>
                                                    <i class="@tipo.Icona me-1"></i>
                                                    @tipo.Nome
                                                </span>
                                                <i class="fas fa-arrow-right text-primary"></i>
                                            </a>
                                        }
                                    }
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                }
                else
                {
                    <div class="p-3">
                        <p class="text-muted small mb-2">Nessuna attività periodica assegnata.</p>
                        @if (tutteAttivitaPeriodiche.Any())
                        {
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assegnaAttivitaPeriodicaModal">
                                <i class="fas fa-plus me-1"></i>Assegna attività periodica
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Torna all'elenco
    </a>
</div>

<!-- Modal Assegna Attività Periodica -->
@if (tutteAttivitaPeriodiche.Any())
{
    <div class="modal fade" id="assegnaAttivitaPeriodicaModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-controller="AttivitaPeriodiche" asp-action="AssegnaClienteDaDettaglio" method="post">
                    <input type="hidden" name="clienteId" value="@Model.Id" />
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title"><i class="fas fa-calendar-plus me-2"></i>Assegna Attività Periodica</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p class="text-muted small">Seleziona l'attività periodica e il tipo di periodo da assegnare a <strong>@Model.RagioneSociale</strong>.</p>
                        
                        @foreach (var ap in tutteAttivitaPeriodiche)
                        {
                            <div class="card mb-2">
                                <div class="card-header py-2" style="background-color: @(ap.Colore)20;">
                                    <strong><i class="@ap.Icona me-2" style="color: @ap.Colore;"></i>@ap.Nome</strong>
                                </div>
                                <div class="card-body py-2">
                                    @if (ap.TipiPeriodo != null && ap.TipiPeriodo.Any())
                                    {
                                        @foreach (var tipo in ap.TipiPeriodo.Where(t => t.IsActive))
                                        {
                                            var giaAssegnato = tipiPeriodoAssegnati.Contains(tipo.Id);
                                            <div class="form-check">
                                                <input type="checkbox" name="tipiPeriodoIds" value="@tipo.Id" 
                                                       class="form-check-input" id="tipoPeriodo_@tipo.Id"
                                                       @(giaAssegnato ? "disabled checked" : "")
                                                       style="border: 2px solid @(giaAssegnato ? "#28a745" : "#666");">
                                                <label class="form-check-label @(giaAssegnato ? "text-success" : "")" for="tipoPeriodo_@tipo.Id">
                                                    <i class="@tipo.Icona me-1" style="color: @tipo.Colore;"></i>
                                                    @tipo.Nome
                                                    @if (giaAssegnato)
                                                    {
                                                        <span class="badge bg-success ms-1">Già assegnato</span>
                                                    }
                                                </label>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Nessun tipo periodo configurato</span>
                                    }
                                </div>
                            </div>
                        }
                        
                        <div class="mt-3">
                            <label class="form-label">Anno Fiscale</label>
                            <select name="annoFiscale" class="form-select">
                                @foreach (var af in tuttiAnni.OrderByDescending(a => a.Anno))
                                {
                                    if (af.IsCurrent)
                                    {
                                        <option value="@af.Anno" selected>@af.Anno (corrente)</option>
                                    }
                                    else
                                    {
                                        <option value="@af.Anno">@af.Anno</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-check me-1"></i>Assegna</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

