@model StudioCG.Web.Models.ClienteAttivita
@using StudioCG.Web.Models
@using StudioCG.Web.Services

@{
    ViewData["Title"] = $"{Model.AttivitaAnnuale?.AttivitaTipo?.Nome} - {Model.Cliente?.RagioneSociale}";
    var annoId = Model.AttivitaAnnuale?.AnnualitaFiscaleId;
    var statiDisponibili = ViewBag.StatiDisponibili as List<StatoAttivitaTipo> ?? new List<StatoAttivitaTipo>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index" asp-route-annoId="@annoId">Attività</a></li>
                <li class="breadcrumb-item">
                    <a asp-action="Tipo" asp-route-id="@Model.AttivitaAnnuale?.AttivitaTipoId" asp-route-annoId="@annoId">
                        @Model.AttivitaAnnuale?.AttivitaTipo?.Nome
                    </a>
                </li>
                <li class="breadcrumb-item active">@Model.Cliente?.RagioneSociale</li>
            </ol>
        </nav>
        <h4 class="mb-0">
            <i class="@Model.AttivitaAnnuale?.AttivitaTipo?.Icon me-2"></i>
            @Model.AttivitaAnnuale?.AttivitaTipo?.Nome
            <span class="badge bg-primary ms-2">@Model.AttivitaAnnuale?.AnnualitaFiscale?.Anno</span>
        </h4>
    </div>
    <a asp-action="Tipo" asp-route-id="@Model.AttivitaAnnuale?.AttivitaTipoId" asp-route-annoId="@annoId" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Torna alla lista
    </a>
</div>

<div class="row">
    <!-- Info Cliente -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-building me-2"></i>Cliente</h6>
            </div>
            <div class="card-body">
                <h5 class="mb-2">@Model.Cliente?.RagioneSociale</h5>
                @if (!string.IsNullOrEmpty(Model.Cliente?.PartitaIVA))
                {
                    <p class="mb-1"><small class="text-muted">P.IVA:</small> <code>@Model.Cliente.PartitaIVA</code></p>
                }
                @if (!string.IsNullOrEmpty(Model.Cliente?.CodiceFiscale))
                {
                    <p class="mb-1"><small class="text-muted">C.F.:</small> <code>@Model.Cliente.CodiceFiscale</code></p>
                }
                @if (!string.IsNullOrEmpty(Model.Cliente?.CodiceAteco))
                {
                    <p class="mb-1"><small class="text-muted">Cod. Ateco:</small> <code>@Model.Cliente.CodiceAteco</code></p>
                }
                <hr>
                <a asp-controller="Clienti" asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-external-link-alt me-1"></i>Vai al cliente
                </a>
            </div>
        </div>
    </div>

    <!-- Form Attività -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-edit me-2"></i>Dati Attività</h6>
            </div>
            <div class="card-body">
                <form asp-action="ClienteAttivita" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Stato</label>
                            <select name="statoId" class="form-select">
                                @foreach (var stato in statiDisponibili)
                                {
                                    <option value="@stato.Id" selected="@(Model.StatoAttivitaTipoId == stato.Id)">
                                        @stato.Nome
                                    </option>
                                }
                            </select>
                            @if (Model.StatoAttivitaTipoNav != null)
                            {
                                <div class="mt-2">
                                    <span class="badge px-2 py-1" style="background-color: @Model.StatoAttivitaTipoNav.ColoreSfondo; color: @Model.StatoAttivitaTipoNav.ColoreTesto;">
                                        <i class="@Model.StatoAttivitaTipoNav.Icon me-1"></i>@Model.StatoAttivitaTipoNav.Nome
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (Model.DataCompletamento.HasValue)
                            {
                                <label class="form-label">Data Completamento</label>
                                <input type="text" class="form-control" value="@Model.DataCompletamento.Value.ToString("dd/MM/yyyy HH:mm")" readonly />
                            }
                        </div>
                    </div>

                    @if (Model.AttivitaAnnuale?.AttivitaTipo?.Campi.Any() == true)
                    {
                        <hr>
                        <h6 class="mb-3">Campi Personalizzati</h6>
                        
                        var tuttiCampi = Model.AttivitaAnnuale.AttivitaTipo.Campi.ToList();
                        <div class="row">
                            @foreach (var campo in tuttiCampi)
                            {
                                var valore = Model.Valori.FirstOrDefault(v => v.AttivitaCampoId == campo.Id)?.Valore ?? "";
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        @campo.Label
                                        @if (campo.IsCalculated)
                                        {
                                            <i class="fas fa-calculator text-warning ms-1" title="Campo calcolato"></i>
                                        }
                                        else if (campo.IsRequired)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </label>
                                    
                                    @if (campo.IsCalculated)
                                    {
                                        // Campo calcolato: mostra valore non editabile (readonly)
                                        var valoreCalcolato = FormulaCalculatorService.CalcolaPerClienteAttivita(campo, Model, tuttiCampi);
                                        <input type="text" 
                                               class="form-control calculated-field" 
                                               style="background-color: #fff3cd !important; font-weight: bold;" 
                                               readonly 
                                               disabled
                                               data-campo-id="@campo.Id"
                                               data-formula="@campo.Formula"
                                               value="@(valoreCalcolato ?? "-")"
                                               title="Campo calcolato: @campo.Formula" />
                                    }
                                    else
                                    {
                                        @switch (campo.FieldType)
                                        {
                                            case AttivitaFieldType.Text:
                                                <input type="text" name="campi[@campo.Id]" value="@valore" class="form-control source-field" data-campo-name="@campo.Name" @(campo.IsRequired ? "required" : "") />
                                                break;
                                                
                                            case AttivitaFieldType.LongText:
                                                <textarea name="campi[@campo.Id]" class="form-control source-field" data-campo-name="@campo.Name" rows="3" @(campo.IsRequired ? "required" : "")>@valore</textarea>
                                                break;
                                                
                                            case AttivitaFieldType.Number:
                                                <input type="number" name="campi[@campo.Id]" value="@valore" class="form-control source-field" data-campo-name="@campo.Name" @(campo.IsRequired ? "required" : "") />
                                                break;
                                                
                                            case AttivitaFieldType.Decimal:
                                                <input type="number" name="campi[@campo.Id]" value="@valore" class="form-control source-field" data-campo-name="@campo.Name" step="0.01" @(campo.IsRequired ? "required" : "") />
                                                break;
                                                
                                            case AttivitaFieldType.Date:
                                                <input type="date" name="campi[@campo.Id]" value="@valore" class="form-control source-field" data-campo-name="@campo.Name" @(campo.IsRequired ? "required" : "") />
                                                break;
                                                
                                            case AttivitaFieldType.Boolean:
                                                <div class="form-check form-switch mt-2">
                                                    <input type="hidden" name="campi[@campo.Id]" value="false" />
                                                    <input type="checkbox" name="campi[@campo.Id]" value="true" class="form-check-input source-field" data-campo-name="@campo.Name" style="width: 3em; height: 1.5em;" @(valore == "true" ? "checked" : "") />
                                                </div>
                                                break;
                                        }
                                    }
                                </div>
                            }
                        </div>
                    }

                    <hr>
                    <div class="mb-3">
                        <label class="form-label">Note</label>
                        <textarea name="note" class="form-control" rows="3" placeholder="Note aggiuntive...">@Model.Note</textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Tipo" asp-route-id="@Model.AttivitaAnnuale?.AttivitaTipoId" asp-route-annoId="@annoId" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Annulla
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Salva
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ========== RICALCOLO CAMPI CALCOLATI IN TEMPO REALE ==========
        
        // Formule dei campi calcolati
        var campiCalcolati = [
            @if (Model.AttivitaAnnuale?.AttivitaTipo?.Campi != null)
            {
                @foreach (var campo in Model.AttivitaAnnuale.AttivitaTipo.Campi.Where(c => c.IsCalculated && !string.IsNullOrEmpty(c.Formula)))
                {
                    @Html.Raw($"{{ id: {campo.Id}, name: '{campo.Name}', formula: '{campo.Formula!.Replace("'", "\\'")}' }},")
                }
            }
        ];

        // Funzione per calcolare formula lato client
        function calcolaFormula(formula, valori) {
            try {
                // Sostituisci riferimenti ai campi con i loro valori
                var formulaCalcolata = formula.replace(/\[([^\]]+)\]/g, function(match, nomeCampo) {
                    var valore = valori[nomeCampo.toUpperCase()] || valori[nomeCampo] || 0;
                    // Converti virgola in punto per parsing
                    if (typeof valore === 'string') {
                        valore = valore.replace(',', '.');
                    }
                    var numero = parseFloat(valore);
                    return isNaN(numero) ? 0 : numero;
                });

                // Converti virgole in punti (supporto formato italiano es: 0,88 -> 0.88)
                formulaCalcolata = formulaCalcolata.replace(/,/g, '.');

                // Valida formula (solo numeri, operatori, parentesi)
                if (!/^[\d\.\+\-\*\/\(\)\s]+$/.test(formulaCalcolata)) {
                    return null;
                }

                // Calcola
                var risultato = eval(formulaCalcolata);
                
                // Formatta con 2 decimali e formato italiano
                return risultato.toLocaleString('it-IT', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            } catch (e) {
                console.error('Errore calcolo formula:', e);
                return null;
            }
        }

        // Ricalcola tutti i campi calcolati
        function ricalcolaCampiCalcolati() {
            if (campiCalcolati.length === 0) return;
            
            // Raccogli valori di tutti i campi sorgente
            var valori = {};
            document.querySelectorAll('.source-field').forEach(function(input) {
                var nomeCampo = input.getAttribute('data-campo-name');
                if (nomeCampo) {
                    var valore = input.type === 'checkbox' ? (input.checked ? '1' : '0') : input.value;
                    valori[nomeCampo] = valore;
                    valori[nomeCampo.toUpperCase()] = valore;
                }
            });
            
            // Ricalcola ogni campo calcolato
            campiCalcolati.forEach(function(campoCalc) {
                var input = document.querySelector('.calculated-field[data-campo-id="' + campoCalc.id + '"]');
                if (input) {
                    var risultato = calcolaFormula(campoCalc.formula, valori);
                    input.value = risultato || '-';
                    
                    // Feedback visivo
                    input.style.backgroundColor = '#fff3cd';
                    setTimeout(function() { input.style.backgroundColor = '#fff3cd'; }, 300);
                }
            });
        }

        // Aggiungi evento a tutti i campi sorgente
        document.querySelectorAll('.source-field').forEach(function(campo) {
            campo.addEventListener('input', ricalcolaCampiCalcolati);
            campo.addEventListener('change', ricalcolaCampiCalcolati);
        });

        // Calcola al caricamento della pagina
        document.addEventListener('DOMContentLoaded', ricalcolaCampiCalcolati);
        
        // Calcola anche immediatamente
        ricalcolaCampiCalcolati();
    </script>
}

