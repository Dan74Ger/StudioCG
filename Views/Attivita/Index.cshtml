@model IEnumerable<StudioCG.Web.Models.AttivitaAnnuale>
@using StudioCG.Web.Models

@{
    ViewData["Title"] = "Attività";
    var annoCorrente = ViewBag.AnnoCorrente as AnnualitaFiscale;
    var tuttiAnni = ViewBag.TuttiAnni as List<AnnualitaFiscale> ?? new List<AnnualitaFiscale>();
    var annoPrecedente = ViewBag.AnnoPrecedente as AnnualitaFiscale;
    var attivitaAnnoPrecedente = ViewBag.AttivitaAnnoPrecedente as List<AttivitaAnnuale> ?? new List<AttivitaAnnuale>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">
            <i class="fas fa-tasks me-2"></i>Attività
            @if (annoCorrente != null)
            {
                <span class="badge bg-primary ms-2">@annoCorrente.Anno</span>
            }
        </h4>
    </div>
    <div class="btn-group">
        <form asp-action="FixStatiNulli" method="post" class="d-inline me-2">
            <button type="submit" class="btn btn-warning" title="Corregge tutte le attività senza stato assegnando lo stato di default">
                <i class="fas fa-wrench me-1"></i>Correggi Stati
            </button>
        </form>
        @if (annoPrecedente != null && attivitaAnnoPrecedente.Any(a => a.ClientiAttivita.Any()))
        {
            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#copiaModal">
                <i class="fas fa-copy me-1"></i>Copia da @annoPrecedente.Anno
            </button>
        }
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-calendar me-1"></i>Cambia Anno
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
            @foreach (var anno in tuttiAnni)
            {
                <li>
                    <a class="dropdown-item @(anno.Id == annoCorrente?.Id ? "active" : "")" 
                       asp-action="Index" asp-route-annoId="@anno.Id">
                        @anno.Anno
                        @if (anno.IsCurrent)
                        {
                            <span class="badge bg-success ms-2">Corrente</span>
                        }
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Nessuna attività configurata per questo anno.
        <a asp-controller="AttivitaTipi" asp-action="Index">Vai alla gestione tipi attività</a>.
    </div>
}
else
{
    <div class="row">
        @foreach (var attivita in Model)
        {
            var totaleClienti = attivita.ClientiAttivita.Count;
            var statiAttivita = attivita.AttivitaTipo?.Stati.Where(s => s.IsActive).OrderBy(s => s.DisplayOrder).ToList() ?? new List<StatoAttivitaTipo>();
            
            // Conta clienti per ogni stato
            var statsPerStato = statiAttivita.ToDictionary(
                s => s.Id,
                s => attivita.ClientiAttivita.Count(ca => ca.StatoAttivitaTipoId == s.Id)
            );
            
            // Calcola completamento in base agli stati finali
            var statiFinali = statiAttivita.Where(s => s.IsFinale).Select(s => s.Id).ToHashSet();
            var completati = attivita.ClientiAttivita.Count(ca => ca.StatoAttivitaTipoId.HasValue && statiFinali.Contains(ca.StatoAttivitaTipoId.Value));
            var percentualeCompletate = totaleClienti > 0 ? (completati * 100 / totaleClienti) : 0;
            
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="@attivita.AttivitaTipo?.Icon me-2"></i>@attivita.AttivitaTipo?.Nome
                        </h6>
                        <a asp-action="Tipo" asp-route-id="@attivita.AttivitaTipoId" asp-route-annoId="@annoCorrente?.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Completamento</span>
                            <span class="fw-bold">@percentualeCompletate%</span>
                        </div>
                        <div class="progress mb-3" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @percentualeCompletate%"></div>
                        </div>
                        
                        <!-- Stati dinamici -->
                        <div class="d-flex flex-wrap gap-1 justify-content-center">
                            @foreach (var stato in statiAttivita.Take(4))
                            {
                                var count = statsPerStato.GetValueOrDefault(stato.Id, 0);
                                <span class="badge px-2 py-1" style="background-color: @stato.ColoreSfondo; color: @stato.ColoreTesto; font-size: 0.75em;">
                                    <i class="@stato.Icon me-1"></i>@count
                                </span>
                            }
                            @if (statiAttivita.Count > 4)
                            {
                                <span class="badge bg-secondary px-2 py-1" style="font-size: 0.75em;">+@(statiAttivita.Count - 4)</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            <i class="fas fa-users me-1"></i>@totaleClienti clienti assegnati
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}

@* Modal Copia da Anno Precedente *@
@if (annoPrecedente != null && attivitaAnnoPrecedente.Any(a => a.ClientiAttivita.Any()))
{
    <div class="modal fade" id="copiaModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-copy me-2"></i>Copia Clienti da @annoPrecedente.Anno a @annoCorrente?.Anno
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form asp-action="CopiaMultiplaClienti" method="post">
                    <input type="hidden" name="annoPrecedenteId" value="@annoPrecedente.Id" />
                    <input type="hidden" name="annoCorrenteId" value="@annoCorrente?.Id" />
                    <div class="modal-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Seleziona le attività per cui vuoi copiare i clienti dal @annoPrecedente.Anno al @annoCorrente?.Anno.
                            I clienti saranno copiati con stato "Da Fare".
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="selectAll" onchange="toggleAllCheckboxes(this)">
                                <label class="form-check-label fw-bold" for="selectAll">
                                    Seleziona Tutti
                                </label>
                            </div>
                            <hr />
                        </div>
                        
                        <div class="list-group">
                            @foreach (var attivita in attivitaAnnoPrecedente.Where(a => a.ClientiAttivita.Any()).OrderBy(a => a.AttivitaTipo?.DisplayOrder))
                            {
                                var attivitaCorrispondente = Model.FirstOrDefault(m => m.AttivitaTipoId == attivita.AttivitaTipoId);
                                var clientiGiaPresenti = attivitaCorrispondente?.ClientiAttivita.Count ?? 0;
                                var clientiDaCopiare = attivita.ClientiAttivita.Count;
                                
                                <label class="list-group-item d-flex align-items-center">
                                    <input class="form-check-input me-3 attivita-checkbox" type="checkbox" 
                                           name="attivitaTipoIds" value="@attivita.AttivitaTipoId"
                                           @(attivitaCorrispondente == null ? "disabled" : "")>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>
                                                <i class="@attivita.AttivitaTipo?.Icon me-2"></i>
                                                <strong>@attivita.AttivitaTipo?.Nome</strong>
                                            </span>
                                            <span class="badge bg-primary rounded-pill">
                                                @clientiDaCopiare clienti
                                            </span>
                                        </div>
                                        @if (attivitaCorrispondente == null)
                                        {
                                            <small class="text-danger">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Attività non associata al @annoCorrente?.Anno
                                            </small>
                                        }
                                        else if (clientiGiaPresenti > 0)
                                        {
                                            <small class="text-muted">
                                                Già presenti nel @annoCorrente?.Anno: @clientiGiaPresenti
                                            </small>
                                        }
                                    </div>
                                </label>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i>Annulla
                        </button>
                        <button type="submit" class="btn btn-info">
                            <i class="fas fa-copy me-1"></i>Copia Selezionati
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        function toggleAllCheckboxes(source) {
            var checkboxes = document.querySelectorAll('.attivita-checkbox:not(:disabled)');
            checkboxes.forEach(function(checkbox) {
                checkbox.checked = source.checked;
            });
        }
    </script>
}

