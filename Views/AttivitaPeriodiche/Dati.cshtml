// ============ REGOLE COLORE ============
let regoleColore = [];

// Carica regole colore all'avvio
function caricaRegoleColore() {
    fetch('@Url.Action("GetRegoleColore", "AttivitaPeriodiche")?tipoPeriodoId=@tipoSelezionato?.Id')
        .then(r => r.json())
        .then(data => {
            regoleColore = data;
            applicaRegoleColore();
        })
        .catch(err => console.error('Errore caricamento regole:', err));
}

// Applica regole colore a tutte le celle
function applicaRegoleColore() {
    console.log('[COLORI] Regole caricate:', regoleColore);
    if (!regoleColore.length) {
        console.log('[COLORI] Nessuna regola da applicare');
        return;
    }

    document.querySelectorAll('.griglia-periodi tbody tr').forEach(riga => {
        // Reset stili riga
        riga.style.backgroundColor = '';
        riga.style.color = '';
        riga.style.fontWeight = '';

        riga.querySelectorAll('input').forEach(input => {
            const campo = input.dataset.campo;
            const valore = parseFloat(input.value.replace(',', '.')) || 0;

            // Reset stile cella
            const td = input.closest('td');
            td.style.backgroundColor = '';
            input.style.color = '';
            input.style.fontWeight = '';

            // Trova regole per questo campo
            const regoleCampo = regoleColore.filter(r => r.campoNome === campo);
            
            for (const regola of regoleCampo) {
                const valConfronto = parseFloat(regola.valoreConfronto) || 0;
                const valoreOriginale = input.value?.trim() || '';
                let soddisfatta = false;

                switch (regola.operatore) {
                    case 'sempre': soddisfatta = true; break;
                    case 'vuoto': soddisfatta = valoreOriginale === ''; break;
                    case 'non_vuoto': soddisfatta = valoreOriginale !== ''; break;
                    case '<': soddisfatta = valore < valConfronto; break;
                    case '<=': soddisfatta = valore <= valConfronto; break;
                    case '=': soddisfatta = valore === valConfronto; break;
                    case '!=': soddisfatta = valore !== valConfronto; break;
                    case '>': soddisfatta = valore > valConfronto; break;
                    case '>=': soddisfatta = valore >= valConfronto; break;
                }

                if (soddisfatta) {
                    console.log('[COLORI] Regola applicata:', campo, regola.operatore, regola.valoreConfronto, '→', valore);
                    if (regola.applicaA === 'riga') {
                        if (regola.coloreSfondo) riga.style.setProperty('background-color', regola.coloreSfondo, 'important');
                        if (regola.coloreTesto) {
                            riga.style.setProperty('color', regola.coloreTesto, 'important');
                            riga.querySelectorAll('input').forEach(inp => inp.style.setProperty('color', regola.coloreTesto, 'important'));
                        }
                        if (regola.grassetto) riga.style.setProperty('font-weight', 'bold', 'important');
                    } else {
                        if (regola.coloreSfondo) td.style.setProperty('background-color', regola.coloreSfondo, 'important');
                        if (regola.coloreTesto) input.style.setProperty('color', regola.coloreTesto, 'important');
                        if (regola.grassetto) input.style.setProperty('font-weight', 'bold', 'important');
                    }
                    break; // Prima regola che matcha vince (per priorità)
                }
            }
        });
    });
}

// ============ RICALCOLA RIPORTI ============
function ricalcolaTuttiRiporti() {
    const clientiIds = [];
    // Cerca gli ID cliente dagli accordion-item
    document.querySelectorAll('.accordion-item[data-cliente-id]').forEach(item => {
