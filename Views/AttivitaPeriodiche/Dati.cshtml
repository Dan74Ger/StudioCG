// Navigazione con frecce e Tab
function navigaConTasti(event, input) {
    const key = event.key;
    if (!['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Enter', 'Tab'].includes(key)) return;
    if (key === 'Tab') return; // Lascia il comportamento default

    const td = input.closest('td');
    const tr = td.closest('tr');
    const table = tr.closest('table');
    const allInputs = Array.from(table.querySelectorAll('tbody input:not([readonly])'));
    const currentIndex = allInputs.indexOf(input);
    
    let nextInput = null;
    const campiPerRiga = allInputs.filter(i => i.closest('tr') === tr).length;

    switch(key) {
        case 'ArrowRight':
        case 'Enter':
            nextInput = allInputs[currentIndex + 1];
            break;
        case 'ArrowLeft':
            nextInput = allInputs[currentIndex - 1];
            break;
        case 'ArrowDown':
            nextInput = allInputs[currentIndex + campiPerRiga];
            break;
        case 'ArrowUp':
            nextInput = allInputs[currentIndex - campiPerRiga];
            break;
    }

    if (nextInput) {
        event.preventDefault();
        nextInput.focus();
        nextInput.select();
    }
}

// Seleziona tutto al focus
