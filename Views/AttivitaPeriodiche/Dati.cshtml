    if (!confirm(`Ricalcolare i riporti per ${clientiIds.length} clienti? I valori verranno aggiornati in base alle regole configurate.`)) {
        return;
    }

    let completati = 0;
    const totale = clientiIds.length;

    clientiIds.forEach(id => {
        fetch('@Url.Action("RicalcolaRiporti", "AttivitaPeriodiche")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
