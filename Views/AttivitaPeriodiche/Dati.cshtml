// ============ FILTRI CAMPI ============
function applicaFiltriCampi() {
    const filtri = {};
    document.querySelectorAll('.filtro-campo').forEach(filtro => {
        const campo = filtro.dataset.campo;
        const valore = filtro.value.trim();
        if (valore) {
            filtri[campo] = valore;
        }
    });

    // Se nessun filtro attivo, mostra tutti
    if (Object.keys(filtri).length === 0) {
        document.querySelectorAll('.accordion-item').forEach(item => {
            item.style.display = '';
        });
        return;
    }

    // Applica filtri a ogni cliente (accordion-item)
    document.querySelectorAll('.accordion-item').forEach(item => {
        let mostra = true;

        for (const [campo, valoreFiltro] of Object.entries(filtri)) {
            // Cerca il valore del campo in qualsiasi periodo del cliente
            const inputs = item.querySelectorAll(`[data-campo="${campo}"]`);
            let trovato = false;

            inputs.forEach(input => {
                let valoreInput = '';
                if (input.type === 'checkbox') {
                    valoreInput = input.checked ? '1' : '0';
                } else {
                    valoreInput = input.value || '';
                }

                // Per filtri di testo, cerca contenuto parziale
                if (valoreFiltro === '1' || valoreFiltro === '0') {
                    // Filtro checkbox: match esatto
                    if (valoreInput === valoreFiltro) trovato = true;
                } else {
                    // Filtro testo: match parziale (case-insensitive)
                    if (valoreInput.toLowerCase().includes(valoreFiltro.toLowerCase())) trovato = true;
                }
            });

            if (!trovato) {
                mostra = false;
                break;
            }
        }

        item.style.display = mostra ? '' : 'none';
    });
}

