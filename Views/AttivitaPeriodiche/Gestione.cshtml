@model IEnumerable<StudioCG.Web.Models.AttivitaPeriodiche.AttivitaPeriodica>
@{
    ViewData["Title"] = "Attività Periodiche";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-calendar-alt me-2"></i>Gestione Attività Periodiche</h2>
            <p class="text-muted mb-0">Crea e configura attività periodiche dinamiche (es: LIPE, Budget Mensile...)</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Form Nuova Sezione -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Nuova Sezione</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreaSezione" method="post">
                        <div class="mb-3">
                            <label class="form-label">Nome Sezione *</label>
                            <input type="text" name="nome" class="form-control" required placeholder="es: LIPE" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nome Plurale</label>
                            <input type="text" name="nomePlurale" class="form-control" placeholder="es: Liquidazioni IVA" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descrizione</label>
                            <textarea name="descrizione" class="form-control" rows="2" placeholder="Descrizione opzionale"></textarea>
                        </div>
                        <div class="row mb-3">
                            <div class="col-8">
                                <label class="form-label">Icona</label>
                                <input type="text" name="icona" class="form-control" value="fas fa-calendar-alt" />
                                <small><a href="https://fontawesome.com/search?o=r&m=free" target="_blank" class="text-decoration-none"><i class="fas fa-external-link-alt me-1"></i>FontAwesome</a></small>
                            </div>
                            <div class="col-4">
                                <label class="form-label">Colore</label>
                                <input type="color" name="colore" class="form-control form-control-color w-100" value="#17a2b8" />
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" name="collegataACliente" value="true" class="form-check-input" id="collegata" checked>
                            <label class="form-check-label" for="collegata">Collegata a Cliente</label>
                            <br><small class="text-muted">Se abilitato, ogni record sarà associato a un cliente</small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-1"></i>Crea Sezione
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Lista Sezioni -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Sezioni Create (@Model.Count())</h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                            <p class="mb-0">Nessuna sezione creata. Inizia creando la prima!</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var attivita in Model)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                                     style="width: 50px; height: 50px; background-color: @attivita.Colore;">
                                                    <i class="@attivita.Icona text-white"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <h5 class="mb-1">
                                                    <i class="@attivita.Icona me-1" style="color: @attivita.Colore;"></i>
                                                    @attivita.Nome
                                                </h5>
                                                <p class="mb-1 text-muted small">@attivita.NomePlurale</p>
                                                @if (!string.IsNullOrEmpty(attivita.Descrizione))
                                                {
                                                    <p class="mb-1 text-muted small">@attivita.Descrizione</p>
                                                }
                                                <div class="mt-2">
                                                    <span class="badge bg-info me-1">
                                                        <i class="fas fa-clock me-1"></i>@attivita.TipiPeriodo.Count tipi periodo
                                                    </span>
                                                    @if (attivita.CollegataACliente)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-users me-1"></i>@attivita.ClientiAssociati.Count clienti
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn-group">
                                            <a asp-action="Configura" asp-route-id="@attivita.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-cog me-1"></i>Configura
                                            </a>
                                            @if (attivita.TipiPeriodo.Any())
                                            {
                                                <a asp-action="Dati" asp-route-id="@attivita.Id" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-database me-1"></i>Dati
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
